<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:paddingTop="8dp"
    android:paddingBottom="8dp"
    android:layout_marginTop="2dp"
    android:layout_marginBottom="2dp"
    style="@style/UiKit.ViewGroup.RelativeLayout">
    <ImageView
        android:id="@+id/stage_channel_item_stage_channel_icon"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/ic_channel_stage_24dp"
        android:layout_centerVertical="true"
        android:importantForAccessibility="no"
        android:layout_marginStart="16dp"
        app:tint="?attr/colorChannelDefault"
        style="@style/UiKit.ImageView"/>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="16dp"
        android:layout_toStartOf="@+id/channels_item_stage_voice_channel_guild_role_subscription_icon"
        android:layout_toEndOf="@+id/stage_channel_item_stage_channel_icon">
        <TextView
            android:textSize="@dimen/uikit_textsize_large"
            android:textColor="?attr/colorChannelDefault"
            android:ellipsize="end"
            android:id="@+id/stage_channel_item_voice_channel_name"
            android:singleLine="true"
            style="@style/UiKit.TextView.Semibold"/>
        <TextView
            android:textSize="@dimen/uikit_textsize_small"
            android:textColor="?attr/colorChannelDefault"
            android:id="@+id/stage_channel_item_voice_channel_topic"
            style="@style/UiKit.Stage.Topic"/>
    </LinearLayout>
    <ImageView
        android:id="@+id/channels_item_stage_voice_channel_guild_role_subscription_icon"
        android:visibility="gone"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/ic_premium_channel_locked"
        android:layout_centerVertical="true"
        android:importantForAccessibility="no"
        android:layout_marginEnd="16dp"
        android:layout_alignParentEnd="true"
        style="@style/UiKit.ImageView"/>
</RelativeLayout>
