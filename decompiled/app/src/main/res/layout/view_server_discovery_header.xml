<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:baselineAligned="false"
    android:animateLayoutChanges="true">
    <ImageView
        android:id="@+id/server_discovery_header_image"
        android:layout_width="0dp"
        android:src="@drawable/bg_server_discovery_header"
        android:scaleType="centerCrop"
        android:importantForAccessibility="no"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        style="@style/UiKit.ImageView"/>
    <TextView
        android:textColor="@color/white"
        android:id="@+id/server_discovery_header_title"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        app:layout_constraintBottom_toTopOf="@+id/server_discovery_header_description"
        app:layout_constraintEnd_toEndOf="@+id/server_discovery_header_image"
        app:layout_constraintStart_toStartOf="@+id/server_discovery_header_image"
        app:layout_constraintTop_toTopOf="@+id/server_discovery_header_image"
        app:layout_constraintVertical_chainStyle="packed"
        style="@style/UiKit.TextView.H1"/>
    <TextView
        android:textColor="@color/white"
        android:gravity="center"
        android:id="@+id/server_discovery_header_description"
        android:layout_width="0dp"
        android:layout_marginTop="4dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        app:layout_constraintBottom_toTopOf="@+id/server_discovery_header_search_layout"
        app:layout_constraintEnd_toEndOf="@+id/server_discovery_header_image"
        app:layout_constraintStart_toStartOf="@+id/server_discovery_header_image"
        app:layout_constraintTop_toBottomOf="@+id/server_discovery_header_title"
        app:layout_constraintVertical_chainStyle="packed"
        style="@style/UiKit.TextView.Medium"/>
    <FrameLayout
        android:id="@+id/server_discovery_header_search_layout"
        android:background="@drawable/rounded_rectangle_4dp_radius"
        android:padding="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/server_discovery_header_image"
        app:layout_constraintEnd_toEndOf="@+id/server_discovery_header_image"
        app:layout_constraintStart_toStartOf="@+id/server_discovery_header_image"
        app:layout_constraintVertical_bias="1">
        <TextView
            android:textColor="?attr/colorTextMuted"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/directory_search_placeholder"
            style="@style/UiKit.TextView.Medium"/>
        <ImageView
            android:layout_gravity="end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_search_grey_24dp"
            android:importantForAccessibility="no"/>
    </FrameLayout>
</merge>
