<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    style="@style/UiKit.Dialog.Container">
    <TextView
        android:id="@+id/kick_user_title"
        android:text="@string/kick_user_title"
        style="@style/UiKit.Dialog.Title"/>
    <View style="@style/UiKit.Divider"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <LinearLayout
            android:focusable="true"
            android:focusableInTouchMode="true"
            style="@style/UiKit.ViewGroup.LinearLayout">
            <TextView
                android:id="@+id/kick_user_body"
                android:text="@string/kick_user_body"
                style="@style/UiKit.Dialog.Body"/>
            <TextView
                android:text="@string/form_label_reason_kick"
                style="@style/UiKit.Dialog.Subtitle"/>
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/kick_user_reason"
                android:layout_margin="16dp"
                android:hint="@string/form_label_reason_kick"
                style="@style/UiKit.TextInputLayout.Primary">
                <com.google.android.material.textfield.TextInputEditText
                    android:maxLength="512"
                    style="@style/UiKit.TextInputLayout.EditText.MultiLine"/>
            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>
    </ScrollView>
    <LinearLayout style="@style/UiKit.Dialog.ButtonContainer">
        <com.google.android.material.button.MaterialButton
            android:id="@+id/kick_user_cancel"
            android:text="@string/cancel"
            style="@style/UiKit.Material.Button.Transparent.Fit"/>
        <com.google.android.material.button.MaterialButton
            android:id="@+id/kick_user_confirm"
            android:text="@string/confirm"
            style="@style/UiKit.Material.Button.Red.Fit"/>
    </LinearLayout>
</LinearLayout>
