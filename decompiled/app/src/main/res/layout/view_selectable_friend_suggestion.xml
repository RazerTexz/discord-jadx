<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/friend_suggestion_container"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/friend_suggestion_avatar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:placeholderImage="?attr/asset_default_avatar_32dp"
        style="@style/Avatar.Standard"/>
    <TextView
        android:textSize="@dimen/uikit_textsize_large"
        android:textColor="?attr/colorHeaderPrimary"
        android:id="@+id/friend_suggestion_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="?attr/font_primary_semibold"
        android:layout_marginStart="16dp"
        app:layout_constraintBottom_toTopOf="@+id/friend_suggestion_nickname"
        app:layout_constraintStart_toEndOf="@+id/friend_suggestion_avatar"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed"
        style="@style/UiKit.TextView.SingleLine"/>
    <TextView
        android:textSize="@dimen/uikit_textsize_large"
        android:textColor="?attr/colorTextMuted"
        android:id="@+id/friend_suggestion_discriminator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/friend_suggestion_name"
        app:layout_constraintStart_toEndOf="@+id/friend_suggestion_name"
        app:layout_constraintTop_toTopOf="@+id/friend_suggestion_name"
        style="@style/UiKit.TextView.SingleLine"/>
    <TextView
        android:textSize="@dimen/uikit_textsize_small"
        android:textColor="?attr/colorHeaderSecondary"
        android:id="@+id/friend_suggestion_nickname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/friend_suggestion_avatar"
        app:layout_constraintTop_toBottomOf="@+id/friend_suggestion_name"
        style="@style/UiKit.TextView.SingleLine"/>
    <com.google.android.material.checkbox.MaterialCheckBox
        android:id="@+id/friend_suggestion_selected"
        android:layout_width="32dp"
        android:layout_height="32dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>
