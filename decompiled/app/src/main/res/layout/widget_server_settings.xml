<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" style="@style/UiKit.ViewGroup.Page">
    <com.google.android.material.appbar.AppBarLayout
        android:background="?attr/primary_630"
        style="@style/AppTheme.AppBarLayout">
        <com.google.android.material.appbar.CollapsingToolbarLayout style="@style/AppTheme.CollapsingToolbarLayout">
            <LinearLayout
                android:gravity="center"
                android:paddingLeft="16dp"
                android:paddingTop="16dp"
                android:paddingRight="16dp"
                android:paddingBottom="32dp"
                android:layout_marginTop="?attr/actionBarSize"
                style="@style/UiKit.ViewGroup.LinearLayout">
                <RelativeLayout
                    android:layout_gravity="center_horizontal"
                    android:layout_width="@dimen/avatar_size_hero"
                    android:layout_height="@dimen/avatar_size_hero"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginBottom="16dp"
                    style="@style/UiKit.ViewGroup.RelativeLayout">
                    <com.facebook.drawee.view.SimpleDraweeView
                        android:id="@+id/server_settings_server_icon"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"
                        app:placeholderImage="?attr/color_brand_500"
                        app:roundAsCircle="true"
                        app:roundWithOverlayColor="?attr/primary_630"
                        style="@style/Avatar.Hero"/>
                    <TextView
                        android:textSize="42sp"
                        android:textColor="@color/primary_100"
                        android:ellipsize="none"
                        android:gravity="center_horizontal"
                        android:id="@+id/server_settings_server_icon_text"
                        android:padding="16dp"
                        android:layout_width="match_parent"
                        android:layout_centerInParent="true"
                        style="@style/UiKit.TextView.Large.SingleLine"/>
                </RelativeLayout>
                <TextView
                    android:id="@+id/server_settings_server_name"
                    android:singleLine="true"
                    style="@style/UiKit.TextView.H1"/>
            </LinearLayout>
            <androidx.appcompat.widget.Toolbar
                android:background="?attr/primary_630"
                style="@style/AppTheme.Toolbar"/>
        </com.google.android.material.appbar.CollapsingToolbarLayout>
    </com.google.android.material.appbar.AppBarLayout>
    <androidx.core.widget.NestedScrollView style="@style/AppTheme.AppBarScrollingViewBehavior">
        <LinearLayout
            android:paddingBottom="16dp"
            style="@style/UiKit.ViewGroup.LinearLayout">
            <LinearLayout
                android:id="@+id/server_settings_section_general_settings"
                style="@style/UiKit.ViewGroup.LinearLayout">
                <TextView
                    android:text="@string/settings"
                    style="@style/UiKit.Settings.Item.Header"/>
                <TextView
                    android:id="@+id/server_settings_option_overview"
                    android:text="@string/overview"
                    app:drawableStartCompat="@drawable/ic_info_24dp"
                    app:drawableTint="?attr/colorInteractiveNormal"
                    style="@style/UiKit.Settings.Item.Icon"/>
                <TextView
                    android:id="@+id/server_settings_option_moderation"
                    android:text="@string/moderation"
                    app:drawableStartCompat="@drawable/ic_privacy_24dp"
                    app:drawableTint="?attr/colorInteractiveNormal"
                    style="@style/UiKit.Settings.Item.Icon"/>
                <TextView
                    android:id="@+id/server_settings_option_audit_log"
                    android:text="@string/guild_settings_label_audit_log"
                    app:drawableStartCompat="@drawable/ic_audit_logs_24dp"
                    app:drawableTint="?attr/colorInteractiveNormal"
                    style="@style/UiKit.Settings.Item.Icon"/>
                <TextView
                    android:id="@+id/server_settings_option_channels"
                    android:text="@string/channels"
                    app:drawableStartCompat="@drawable/ic_channels_24dp"
                    app:drawableTint="?attr/colorInteractiveNormal"
                    style="@style/UiKit.Settings.Item.Icon"/>
                <TextView
                    android:id="@+id/server_settings_option_integrations"
                    android:text="@string/integrations"
                    app:drawableStartCompat="@drawable/ic_controller_24dp"
                    app:drawableTint="?attr/colorInteractiveNormal"
                    style="@style/UiKit.Settings.Item.Icon"/>
                <TextView
                    android:id="@+id/server_settings_option_security"
                    android:text="@string/security"
                    app:drawableStartCompat="@drawable/ic_security_24dp"
                    app:drawableTint="?attr/colorInteractiveNormal"
                    style="@style/UiKit.Settings.Item.Icon"/>
                <TextView
                    android:id="@+id/server_settings_option_vanity_url"
                    android:text="@string/vanity_url"
                    app:drawableStartCompat="@drawable/ic_link_white_24dp"
                    app:drawableTint="?attr/colorInteractiveNormal"
                    style="@style/UiKit.Settings.Item.Icon"/>
                <TextView
                    android:id="@+id/server_settings_emojis_option"
                    android:text="@string/emoji"
                    app:drawableStartCompat="@drawable/ic_emoji_24dp"
                    app:drawableTint="?attr/colorInteractiveNormal"
                    style="@style/UiKit.Settings.Item.Icon"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/server_settings_section_community"
                style="@style/UiKit.ViewGroup.LinearLayout">
                <View
                    android:id="@+id/server_settings_section_community_divider"
                    style="@style/UiKit.Settings.Divider"/>
                <TextView
                    android:text="@string/guild_settings_community"
                    style="@style/UiKit.Settings.Item.Header"/>
                <TextView
                    android:id="@+id/server_settings_community_overview_option"
                    android:text="@string/overview"
                    app:drawableStartCompat="@drawable/ic_community_24dp"
                    app:drawableTint="?attr/colorInteractiveNormal"
                    style="@style/UiKit.Settings.Item.Icon"/>
                <TextView
                    android:id="@+id/server_settings_enable_community_option"
                    android:visibility="gone"
                    android:text="@string/guild_settings_community_enable_community"
                    app:drawableStartCompat="@drawable/ic_community_24dp"
                    app:drawableTint="?attr/colorInteractiveNormal"
                    style="@style/UiKit.Settings.Item.Icon"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/server_settings_section_server_monetization"
                style="@style/UiKit.ViewGroup.LinearLayout">
                <View
                    android:id="@+id/server_settings_section_server_monetization_divider"
                    style="@style/UiKit.Settings.Divider"/>
                <TextView
                    android:text="@string/guild_settings_monetization"
                    style="@style/UiKit.Settings.Item.Header"/>
                <TextView
                    android:id="@+id/server_settings_guild_role_subscription_get_started"
                    android:visibility="gone"
                    android:text="@string/guild_role_subscription_empty_cta"
                    app:drawableStartCompat="@drawable/ic_guild_role_subscription_badge"
                    style="@style/UiKit.Settings.Item.Icon"/>
                <TextView
                    android:id="@+id/server_settings_guild_role_subscription_basic_info"
                    android:visibility="gone"
                    android:text="@string/guild_role_subscription_settings_section_basic_info"
                    app:drawableStartCompat="@drawable/ic_info_24dp"
                    app:drawableTint="?attr/colorInteractiveNormal"
                    style="@style/UiKit.Settings.Item.Icon"/>
                <TextView
                    android:id="@+id/server_settings_guild_role_subscription_tiers"
                    android:visibility="gone"
                    android:text="@string/guild_role_subscription_settings_section_tiers"
                    app:drawableStartCompat="@drawable/ic_tiers_24dp"
                    app:drawableTint="?attr/colorInteractiveNormal"
                    style="@style/UiKit.Settings.Item.Icon"/>
                <TextView
                    android:id="@+id/server_settings_guild_role_subscription_earnings"
                    android:text="@string/guild_role_subscription_settings_section_payment"
                    app:drawableStartCompat="@drawable/ic_wallet_24dp"
                    app:drawableTint="?attr/colorInteractiveNormal"
                    style="@style/UiKit.Settings.Item.Icon"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/server_settings_section_user_management"
                style="@style/UiKit.ViewGroup.LinearLayout">
                <View
                    android:id="@+id/server_settings_section_user_management_divider"
                    style="@style/UiKit.Settings.Divider"/>
                <TextView
                    android:text="@string/user_management"
                    style="@style/UiKit.Settings.Item.Header"/>
                <TextView
                    android:id="@+id/server_settings_members_option"
                    android:text="@string/members"
                    app:drawableStartCompat="@drawable/ic_members_24dp"
                    app:drawableTint="?attr/colorInteractiveNormal"
                    style="@style/UiKit.Settings.Item.Icon"/>
                <TextView
                    android:id="@+id/server_settings_roles_option"
                    android:text="@string/roles"
                    app:drawableStartCompat="@drawable/ic_flag_24dp"
                    app:drawableTint="?attr/colorInteractiveNormal"
                    style="@style/UiKit.Settings.Item.Icon"/>
                <TextView
                    android:id="@+id/server_settings_instant_invites_option"
                    android:text="@string/instant_invites"
                    app:drawableStartCompat="@drawable/ic_diag_link_24dp"
                    app:drawableTint="?attr/colorInteractiveNormal"
                    style="@style/UiKit.Settings.Item.Icon"/>
                <TextView
                    android:id="@+id/server_settings_bans_option"
                    android:text="@string/bans"
                    app:drawableStartCompat="@drawable/ic_hammer_24dp"
                    app:drawableTint="?attr/colorInteractiveNormal"
                    style="@style/UiKit.Settings.Item.Icon"/>
            </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
