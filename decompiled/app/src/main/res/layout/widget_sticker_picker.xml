<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/sticker_picker_container"
    android:background="?attr/colorBackgroundSecondary"
    style="@style/UiKit.ViewGroup.Page">
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/sticker_app_bar"
        android:background="@color/transparent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/AppTheme.AppBarLayout.Flat">
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/sticker_toolbar"
            android:layout_height="wrap_content"
            android:minHeight="0dp"
            app:contentInsetStart="0dp"
            style="@style/AppTheme.Toolbar.Transparent">
            <com.discord.views.SearchInputView
                android:id="@+id/sticker_search_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="12dp"
                android:layout_marginRight="12dp"
                android:animateLayoutChanges="true"
                app:siv_hint="@string/search_for_stickers"
                app:siv_search_content_description="@string/search_for_stickers"/>
        </androidx.appcompat.widget.Toolbar>
    </com.google.android.material.appbar.AppBarLayout>
    <com.discord.app.AppViewFlipper
        android:id="@+id/chat_input_sticker_picker_view_flipper"
        android:layout_marginBottom="@dimen/expression_picker_category_bar_height"
        android:inAnimation="@android:anim/fade_in"
        android:outAnimation="@android:anim/fade_out"
        style="@style/UiKit.ViewGroup.AppViewFlipper.InCoordinatorLayout">
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/chat_input_sticker_picker_recycler"
            android:layout_height="match_parent"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="12dp"
            android:layout_marginRight="8dp"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            style="@style/UiKit.ViewGroup.RecyclerView"/>
        <LinearLayout
            android:gravity="center"
            android:id="@+id/chat_input_sticker_picker_empty_container"
            android:layout_height="match_parent"
            style="@style/UiKit.ViewGroup.LinearLayout">
            <ImageView
                android:layout_gravity="center_horizontal"
                android:id="@+id/chat_input_sticker_picker_empty_image"
                android:layout_width="wrap_content"
                android:layout_height="72dp"
                android:src="@drawable/ic_removed_sticker_72dp"
                android:importantForAccessibility="no"/>
            <TextView
                android:textAppearance="@style/UiKit.TextAppearance.Bold"
                android:textSize="@dimen/uikit_textsize_xlarge"
                android:textColor="?attr/colorHeaderPrimary"
                android:id="@+id/chat_input_sticker_picker_empty_title"
                android:layout_marginTop="8dp"
                style="@style/UiKit.TextView"/>
            <TextView
                android:textSize="@dimen/uikit_textsize_medium"
                android:textColor="?attr/colorHeaderSecondary"
                android:gravity="center"
                android:id="@+id/chat_input_sticker_picker_empty_subtitle"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="8dp"
                android:layout_marginRight="24dp"
                style="@style/UiKit.TextView"/>
            <com.discord.utilities.view.text.LinkifiedTextView
                android:textSize="@dimen/uikit_textsize_large"
                android:id="@+id/chat_input_sticker_picker_empty_link"
                android:visibility="gone"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="8dp"
                android:layout_marginRight="24dp"
                style="@style/UiKit.TextView.Link"/>
        </LinearLayout>
        <LinearLayout
            android:gravity="center"
            android:id="@+id/chat_input_sticker_picker_empty_container_phase_1"
            android:layout_height="match_parent"
            style="@style/UiKit.ViewGroup.LinearLayout">
            <TextView
                android:textAppearance="@style/UiKit.TextAppearance.Bold"
                android:textSize="@dimen/uikit_textsize_xlarge"
                android:textColor="?attr/colorHeaderPrimary"
                android:id="@+id/chat_input_sticker_picker_empty_title_phase_1"
                android:layout_marginTop="8dp"
                android:text="@string/sticker_picker_premium_empty_state_title"
                style="@style/UiKit.TextView"/>
            <TextView
                android:textSize="@dimen/uikit_textsize_medium"
                android:textColor="?attr/colorHeaderSecondary"
                android:gravity="center"
                android:id="@+id/chat_input_sticker_picker_empty_subtitle_phase_1"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="8dp"
                android:layout_marginRight="24dp"
                android:text="@string/sticker_picker_premium_empty_state_subtitle"
                style="@style/UiKit.TextView"/>
            <LinearLayout
                android:gravity="center"
                android:layout_gravity="center"
                style="@style/UiKit.ViewGroup.LinearLayout.Horizontal">
                <com.discord.views.sticker.StickerView
                    android:id="@+id/chat_input_sticker_picker_empty_sticker_1"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginRight="4dp"/>
                <com.discord.views.sticker.StickerView
                    android:id="@+id/chat_input_sticker_picker_empty_sticker_2"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginRight="4dp"/>
                <com.discord.views.sticker.StickerView
                    android:id="@+id/chat_input_sticker_picker_empty_sticker_3"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginRight="4dp"/>
                <com.discord.views.sticker.StickerView
                    android:id="@+id/chat_input_sticker_picker_empty_sticker_4"
                    android:layout_width="60dp"
                    android:layout_height="60dp"/>
            </LinearLayout>
            <com.discord.views.LoadingButton
                android:id="@+id/chat_input_sticker_picker_empty_subscribe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:lb_background_color="@color/status_green_600"
                app:lb_icon="@drawable/ic_nitro_badge_white"
                app:lb_icon_gravity="textStart"
                app:lb_progress_color="@color/white"
                app:lb_text="@string/sticker_picker_premium_empty_state_cta"/>
        </LinearLayout>
    </com.discord.app.AppViewFlipper>
    <View
        android:layout_gravity="bottom"
        android:id="@+id/sticker_picker_bottom_bar_divider"
        android:background="?attr/colorBackgroundTertiary"
        android:layout_marginBottom="@dimen/expression_picker_category_bar_height"
        android:layout_above="@+id/sticker_picker_bottom_bar"
        style="@style/UiKit.Divider"/>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_gravity="bottom"
        android:id="@+id/sticker_picker_bottom_bar"
        android:background="?attr/colorBackgroundSecondary"
        android:layout_width="match_parent"
        android:layout_height="@dimen/expression_picker_category_bar_height"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:elevation="8dp"
        style="@style/UiKit.ViewGroup.ConstraintLayout">
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/sticker_picker_category_recycler"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:contentDescription="@string/categories"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
