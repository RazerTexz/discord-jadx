<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" style="@style/UiKit.ViewGroup.Page">
    <com.google.android.material.appbar.AppBarLayout style="@style/AppTheme.AppBarLayout.Flat">
        <androidx.appcompat.widget.Toolbar style="@style/AppTheme.Toolbar"/>
    </com.google.android.material.appbar.AppBarLayout>
    <androidx.core.widget.NestedScrollView style="@style/UiKit.ViewGroup.NestedScrollView.AppBarScrollingViewBehavior">
        <LinearLayout style="@style/UiKit.ViewGroup.LinearLayout">
            <TextView
                android:id="@+id/settings_privacy_safe_messaging_header"
                android:text="@string/user_explicit_content_filter"
                style="@style/UiKit.Settings.Item.Header"/>
            <TextView
                android:textSize="@dimen/uikit_textsize_medium"
                android:text="@string/user_explicit_content_filter_help"
                style="@style/UiKit.Settings.Item"/>
            <com.discord.views.CheckedSetting
                android:id="@+id/settings_privacy_explicit_2"
                app:cs_subtext="@string/user_explicit_content_filter_friends_and_non_friends_help"
                app:cs_text="@string/user_explicit_content_filter_friends_and_non_friends"
                app:cs_text_color="@color/status_green_600"
                app:cs_view_type="radio"
                style="@style/UiKit.CheckedSetting.Themed"/>
            <com.discord.views.CheckedSetting
                android:id="@+id/settings_privacy_explicit_1"
                app:cs_subtext="@string/user_explicit_content_filter_non_friends_help"
                app:cs_text="@string/user_explicit_content_filter_non_friends"
                app:cs_text_color="@color/status_yellow_560"
                app:cs_view_type="radio"
                style="@style/UiKit.CheckedSetting.Themed"/>
            <com.discord.views.CheckedSetting
                android:id="@+id/settings_privacy_explicit_0"
                app:cs_subtext="@string/user_explicit_content_filter_disabled_help"
                app:cs_text="@string/user_explicit_content_filter_disabled"
                app:cs_text_color="@color/status_red_500"
                app:cs_view_type="radio"
                style="@style/UiKit.CheckedSetting.Themed"/>
            <View style="@style/UiKit.Settings.Divider"/>
            <TextView
                android:id="@+id/settings_privacy_defaults_header"
                android:text="@string/user_dm_settings"
                style="@style/UiKit.Settings.Item.Header"/>
            <com.discord.views.CheckedSetting
                android:id="@+id/settings_privacy_default_restricted_guilds"
                app:cs_subtext="@string/user_dm_settings_help"
                app:cs_text="@string/new_guilds_dm_allowed"
                app:cs_view_type="switchview"
                style="@style/UiKit.CheckedSetting.Themed"/>
            <View style="@style/UiKit.Settings.Divider"/>
            <TextView
                android:id="@+id/settings_privacy_friend_source_header"
                android:text="@string/friend_permitted_source"
                style="@style/UiKit.Settings.Item.Header"/>
            <com.discord.views.CheckedSetting
                android:id="@+id/settings_privacy_friend_source_0"
                app:cs_text="@string/friend_permitted_source_all"
                app:cs_view_type="switchview"
                style="@style/UiKit.CheckedSetting.Themed"/>
            <com.discord.views.CheckedSetting
                android:id="@+id/settings_privacy_friend_source_1"
                app:cs_text="@string/friend_permitted_source_mutual_friends"
                app:cs_view_type="switchview"
                style="@style/UiKit.CheckedSetting.Themed"/>
            <com.discord.views.CheckedSetting
                android:id="@+id/settings_privacy_friend_source_2"
                app:cs_text="@string/friend_permitted_source_mutual_guilds"
                app:cs_view_type="switchview"
                style="@style/UiKit.CheckedSetting.Themed"/>
            <View style="@style/UiKit.Settings.Divider"/>
            <LinearLayout
                android:id="@+id/settings_privacy_contact_sync"
                android:visibility="gone"
                style="@style/UiKit.ViewGroup.LinearLayout">
                <TextView
                    android:id="@+id/settings_privacy_contact_sync_title"
                    android:text="@string/contact_sync_title"
                    style="@style/UiKit.Settings.Item.Header"/>
                <com.discord.views.CheckedSetting
                    android:id="@+id/contact_sync_setting_staff_only"
                    app:cs_text="STAFF ONLY - Contact Sync Connection"
                    app:cs_view_type="switchview"
                    style="@style/UiKit.CheckedSetting.Themed"/>
                <com.discord.views.CheckedSetting
                    android:id="@+id/contact_sync_setting_enabled"
                    app:cs_text="@string/contact_sync_setting_label"
                    app:cs_view_type="switchview"
                    style="@style/UiKit.CheckedSetting.Themed"/>
                <TextView
                    android:textSize="@dimen/uikit_textsize_small"
                    android:textColor="?attr/colorHeaderSecondary"
                    android:id="@+id/contact_sync_setting_info"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:text="@string/contact_sync_info_settings_2"
                    style="@style/UiKit.TextView"/>
                <TextView
                    android:textSize="@dimen/uikit_textsize_small"
                    android:textColor="?attr/colorHeaderSecondary"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginBottom="16dp"
                    android:text="@string/contact_sync_info_2"
                    style="@style/UiKit.TextView"/>
                <TextView
                    android:text="@string/contact_sync_info_permissions_form_header"
                    style="@style/UiKit.Settings.Item.Header"/>
                <com.discord.views.CheckedSetting
                    android:id="@+id/contact_sync_setting_phone"
                    app:cs_subtext="@string/contact_sync_info_phone"
                    app:cs_text="@string/form_label_phone_number"
                    app:cs_view_type="switchview"
                    style="@style/UiKit.CheckedSetting.Themed"/>
                <com.discord.views.CheckedSetting
                    android:id="@+id/contact_sync_setting_email"
                    app:cs_subtext="@string/contact_sync_info_email"
                    app:cs_text="@string/email"
                    app:cs_view_type="switchview"
                    style="@style/UiKit.CheckedSetting.Themed"/>
                <View style="@style/UiKit.Settings.Divider"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/settings_privacy_controls"
                android:visibility="gone"
                style="@style/UiKit.ViewGroup.LinearLayout">
                <TextView
                    android:id="@+id/settings_privacy_data_header"
                    android:text="@string/data_privacy_controls"
                    style="@style/UiKit.Settings.Item.Header"/>
                <com.discord.views.CheckedSetting
                    android:id="@+id/settings_privacy_statistics"
                    app:cs_subtext="@string/data_privacy_controls_usage_statistics_note"
                    app:cs_text="@string/data_privacy_controls_usage_statistics_title"
                    app:cs_view_type="switchview"
                    style="@style/UiKit.CheckedSetting.Themed"/>
                <com.discord.views.CheckedSetting
                    android:id="@+id/settings_privacy_personalization"
                    app:cs_subtext="@string/data_privacy_controls_personalization_note_learn_more"
                    app:cs_text="@string/data_privacy_controls_personalization_title"
                    app:cs_view_type="switchview"
                    style="@style/UiKit.CheckedSetting.Themed"/>
                <com.discord.views.CheckedSetting
                    android:id="@+id/settings_privacy_screenreader_detection"
                    app:cs_subtext="@string/data_privacy_controls_allow_accessibility_detection_note"
                    app:cs_text="@string/data_privacy_controls_allow_accessibility_detection_title"
                    app:cs_view_type="switchview"
                    style="@style/UiKit.CheckedSetting.Themed"/>
                <com.discord.views.CheckedSetting
                    android:id="@+id/settings_privacy_basic_service"
                    app:cs_subtext="@string/data_privacy_controls_basic_service_note"
                    app:cs_text="@string/data_privacy_controls_basic_service_title"
                    style="@style/UiKit.CheckedSetting.Themed"/>
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/settings_privacy_request_data"
                    android:text="@string/data_privacy_controls_request_data_download"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    style="@style/UiKit.Material.Button.Outline"/>
                <TextView
                    android:layout_gravity="center_horizontal"
                    android:id="@+id/request_data_link"
                    android:background="?attr/selectableItemBackground"
                    android:padding="8dp"
                    android:layout_marginBottom="16dp"
                    style="@style/UiKit.TextView"/>
            </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
    <com.discord.utilities.dimmer.DimmerView
        android:id="@+id/dimmer_view"
        style="@style/UiKit.DimmerView"/>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
