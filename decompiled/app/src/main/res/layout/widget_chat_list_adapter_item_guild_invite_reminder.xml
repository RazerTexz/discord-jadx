<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="?attr/selectableItemBackground"
    android:padding="16dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/chat_action_item_image"
        android:layout_width="@dimen/avatar_size_chat"
        android:layout_height="@dimen/avatar_size_chat"
        android:src="@drawable/ic_reminder_notification"
        android:scaleType="fitCenter"
        android:importantForAccessibility="no"
        android:layout_marginEnd="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:textSize="@dimen/uikit_textsize_large"
        android:textColor="?attr/colorHeaderPrimary"
        android:layout_gravity="center_vertical"
        android:id="@+id/chat_action_item_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginStart="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/chat_action_item_image"
        app:layout_constraintTop_toTopOf="@+id/chat_action_item_image"
        style="@style/UiKit.TextView.Semibold"/>
    <TextView
        android:id="@+id/chat_action_item_subtext"
        android:visibility="visible"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/chat_action_item_text"
        app:layout_constraintTop_toBottomOf="@+id/chat_action_item_text"
        style="@style/UiKit.TextAppearance"/>
    <com.google.android.material.button.MaterialButton
        android:id="@+id/chat_action_item_button"
        android:visibility="visible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/system_message_invite_users_button"
        app:layout_constraintStart_toStartOf="@+id/chat_action_item_subtext"
        app:layout_constraintTop_toBottomOf="@+id/chat_action_item_subtext"
        style="@style/UiKit.Material.Button"/>
</androidx.constraintlayout.widget.ConstraintLayout>
