<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" style="@style/AppAlertDialog">
    <TextView
        android:id="@+id/server_settings_confirm_disable_integration_header"
        android:text="@string/disable_integration_title"
        style="@style/AppAlertDialogHeader"/>
    <LinearLayout style="@style/AppAlertDialogContent">
        <TextView
            android:id="@+id/server_settings_confirm_disable_integration_body"
            style="@style/AppAlertDialogText"/>
    </LinearLayout>
    <LinearLayout style="@style/AppAlertDialogFooter">
        <com.google.android.material.button.MaterialButton
            android:id="@+id/server_settings_confirm_disable_integration_cancel"
            android:text="@string/cancel"
            style="@style/UiKit.Material.Button.Transparent.Fit"/>
        <com.google.android.material.button.MaterialButton
            android:id="@+id/server_settings_confirm_disable_integration_confirm"
            android:text="@string/disable"
            style="@style/UiKit.Material.Button.Red.Fit"/>
    </LinearLayout>
</LinearLayout>
