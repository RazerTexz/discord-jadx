<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item_listen_together_container"
    android:clipChildren="true"
    android:clipToPadding="true"
    style="@style/UiKit.Chat.Embed.Container">
    <com.discord.utilities.view.rounded.RoundedRelativeLayout
        android:id="@+id/item_invite_splash_container"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/item_invite_header"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:topLeftRadius="4dp"
        app:topRightRadius="4dp">
        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/item_invite_splash"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerInside"
            android:importantForAccessibility="no"/>
    </com.discord.utilities.view.rounded.RoundedRelativeLayout>
    <TextView
        android:id="@+id/item_invite_header"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="8dp"
        android:text="@string/invite_button_resolving"
        app:layout_constraintBottom_toTopOf="@+id/barrier_header"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/item_invite_splash_container"
        style="@style/UiKit.Chat.Embed.Header"/>
    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/barrier_header"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:barrierDirection="top"
        app:constraint_referenced_ids="item_invite_image, item_invite_name"
        app:layout_constraintTop_toBottomOf="@+id/item_invite_header"/>
    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/item_invite_image"
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:layout_marginStart="16dp"
        app:layout_constraintBottom_toTopOf="@+id/barrier_button"
        app:layout_constraintEnd_toEndOf="@+id/item_invite_name"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/barrier_header"
        app:layout_constraintVertical_bias="0"
        app:roundAsCircle="true"
        app:roundWithOverlayColor="?attr/primary_630"/>
    <TextView
        android:textColor="@color/white"
        android:ellipsize="end"
        android:gravity="center"
        android:id="@+id/item_invite_image_text"
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:maxLines="1"
        android:singleLine="true"
        app:layout_constraintBottom_toBottomOf="@+id/item_invite_button_layout"
        app:layout_constraintEnd_toEndOf="@+id/item_invite_image"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toStartOf="@+id/item_invite_image"
        app:layout_constraintTop_toTopOf="@+id/item_invite_image"
        app:layout_constraintVertical_bias="0"
        style="@style/UiKit.TextView"/>
    <TextView
        android:textSize="@dimen/uikit_textsize_large"
        android:textColor="?attr/primary_100"
        android:id="@+id/item_invite_name"
        android:layout_width="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintBottom_toTopOf="@+id/item_invite_channel_name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/item_invite_image"
        app:layout_constraintTop_toBottomOf="@+id/barrier_header"
        app:layout_constraintVertical_bias="0"
        app:layout_constraintVertical_chainStyle="packed"
        style="@style/UiKit.TextView.Marquee"/>
    <TextView
        android:gravity="center_vertical"
        android:id="@+id/item_invite_channel_name"
        android:visibility="gone"
        android:layout_width="0dp"
        android:layout_marginTop="4dp"
        android:drawablePadding="4dp"
        app:drawableStartCompat="@drawable/ic_channel_voice_16dp"
        app:drawableTint="?attr/colorChannelDefault"
        app:layout_constraintBottom_toTopOf="@+id/item_invite_member_container"
        app:layout_constraintEnd_toEndOf="@+id/item_invite_name"
        app:layout_constraintStart_toStartOf="@+id/item_invite_name"
        app:layout_constraintTop_toBottomOf="@+id/item_invite_name"
        app:layout_constraintVertical_bias="0"
        app:layout_constraintVertical_chainStyle="packed"
        style="@style/UiKit.Chat.Embed.Subtext"/>
    <com.discord.views.guilds.ServerMemberCount
        android:id="@+id/item_invite_member_container"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintBottom_toTopOf="@+id/barrier_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/item_invite_image"
        app:layout_constraintTop_toBottomOf="@+id/item_invite_channel_name"
        app:layout_constraintVertical_bias="0"
        app:layout_constraintVertical_chainStyle="packed"/>
    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/barrier_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:barrierDirection="bottom"
        app:constraint_referenced_ids="item_invite_member_container, item_invite_image"/>
    <FrameLayout
        android:id="@+id/item_invite_button_layout"
        android:paddingBottom="8dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginRight="16dp"
        android:text="@string/join_guild"
        app:layout_constraintBottom_toBottomOf="@+id/item_invite_hub_layout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/barrier_button"
        app:layout_constraintVertical_bias="0">
        <com.google.android.material.button.MaterialButton
            android:id="@+id/item_invite_joined_button"
            android:visibility="gone"
            android:text="@string/joined_guild"
            style="@style/UiKit.Material.Button.Secondary.Outline"/>
        <com.google.android.material.button.MaterialButton
            android:id="@+id/item_invite_join_button"
            android:text="@string/join_guild"
            style="@style/UiKit.Material.Button.Green"/>
        <com.google.android.material.button.MaterialButton
            android:id="@+id/item_invite_mention_button"
            android:visibility="gone"
            android:text="@string/mention"
            style="@style/UiKit.Material.Button"/>
        <View
            android:id="@+id/item_invite_loading_button"
            android:background="@drawable/drawable_empty_text_placeholder_dark"
            android:visibility="gone"
            android:layout_height="36dp"
            android:layout_marginTop="8dp"
            android:text="@string/mention"
            style="@style/UiKit.ViewGroup"/>
    </FrameLayout>
    <FrameLayout
        android:id="@+id/item_invite_hub_layout"
        android:visibility="gone"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/item_invite_button_layout">
        <View
            android:background="?attr/colorBackgroundModifierAccent"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>
        <com.discord.utilities.view.text.LinkifiedTextView
            android:id="@+id/item_invite_hub_link"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/hub_invite_another_school_link"
            style="@style/UiKit.TextView"/>
    </FrameLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
