<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="?attr/colorBackgroundPrimary"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:textColor="?attr/colorInteractiveNormal"
        android:id="@+id/guild_role_subscription_section_header"
        android:background="?attr/colorBackgroundPrimary"
        android:paddingTop="24dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/UiKit.TextView.H6"/>
    <TextView
        android:textColor="?attr/colorHeaderSecondary"
        android:id="@+id/guild_role_subscription_section_description"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        style="@style/UiKit.TextView.Medium"/>
</LinearLayout>
