<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/fullscreen_call_preview_empty_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/fullscreen_call_preview_empty_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_voice_channel_empty"
        android:importantForAccessibility="no"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:textColor="?attr/colorTextNormal"
        android:gravity="center_horizontal"
        android:id="@+id/fullscreen_call_preview_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="12dp"
        android:layout_marginRight="16dp"
        android:text="@string/guild_voice_chat_empty_state_title"
        app:layout_constraintTop_toBottomOf="@+id/fullscreen_call_preview_empty_image"
        style="@style/UiKit.TextView.H1.Bold"/>
    <TextView
        android:textColor="?attr/colorTextNormal"
        android:gravity="center_horizontal"
        android:id="@+id/fullscreen_call_preview_subtitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="12dp"
        android:layout_marginRight="16dp"
        android:text="@string/guild_voice_chat_empty_state_subtitle"
        app:layout_constraintTop_toBottomOf="@+id/fullscreen_call_preview_header"
        style="@style/UiKit.TextView"/>
</androidx.constraintlayout.widget.ConstraintLayout>
