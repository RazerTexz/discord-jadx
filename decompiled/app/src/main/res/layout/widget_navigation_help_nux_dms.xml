<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="center_horizontal"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:padding="32dp"
    android:layout_height="match_parent"
    style="@style/UiKit.ViewGroup.LinearLayout">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginBottom="32dp"
        android:src="@drawable/asset_nux_navigation_dms"
        android:layout_weight="2"
        android:importantForAccessibility="no"/>
    <LinearLayout
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <TextView
            android:textSize="@dimen/uikit_textsize_xxlarge"
            android:textColor="@color/white"
            android:gravity="bottom|center_horizontal"
            android:layout_marginBottom="16dp"
            android:text="@string/direct_messages"
            style="@style/UiKit.TextView.H1.Bold"/>
        <TextView
            android:textColor="@color/white"
            android:gravity="center"
            android:text="@string/nux_navigation_help_dms"
            style="@style/UiKit.TextView.Large"/>
    </LinearLayout>
</LinearLayout>
