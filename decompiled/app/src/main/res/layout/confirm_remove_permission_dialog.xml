<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" style="@style/UiKit.ViewGroup.Page.LinearLayout">
    <LinearLayout
        android:id="@+id/notice_header_container"
        style="@style/UiKit.ViewGroup.LinearLayout">
        <TextView
            android:padding="16dp"
            android:text="@string/settings_permissions_delete_title"
            style="@style/UiKit.TextView.H1.Bold"/>
        <View style="@style/UiKit.Divider"/>
    </LinearLayout>
    <TextView
        android:textColor="?attr/colorTextNormal"
        android:id="@+id/body"
        android:paddingTop="8dp"
        android:layout_marginBottom="8dp"
        android:text="@string/settings_permissions_delete_body"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        style="@style/UiKit.TextView"/>
    <View style="@style/UiKit.Settings.Divider"/>
    <LinearLayout
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        style="@style/UiKit.Dialog.ButtonContainer">
        <com.google.android.material.button.MaterialButton
            android:layout_gravity="center_vertical"
            android:id="@+id/cancel"
            android:padding="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/cancel"
            style="@style/UiKit.Material.Button.Transparent.Fit"/>
        <com.discord.views.LoadingButton
            android:layout_gravity="center_vertical"
            android:id="@+id/confirm"
            android:padding="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            app:lb_background_color="@color/status_red"
            app:lb_progress_color="@color/white"
            app:lb_text="@string/private_channel_members_remove_yes_confirmation"
            app:lb_text_color="@drawable/button_text_color_primary_100"/>
    </LinearLayout>
</LinearLayout>
