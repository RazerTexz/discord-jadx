<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:paddingTop="16dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="16dp"
    android:paddingEnd="16dp"
    style="@style/UiKit.Chat.Embed.CardView">
    <ImageView
        android:id="@+id/thread_icon"
        android:background="@drawable/drawable_circle_black"
        android:padding="16dp"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:src="@drawable/ic_thread"
        android:contentDescription="@string/thread"
        android:backgroundTint="?attr/colorBackgroundAccent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="?attr/colorHeaderPrimary"
        style="@style/Avatar.Small"/>
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/thread_name_input"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:hint="@string/thread_name"
        android:imeOptions="actionNext"
        app:errorIconTint="?attr/colorTextDanger"
        app:errorTextColor="?attr/colorTextDanger"
        style="@style/UiKit.TextInputLayout">
        <com.google.android.material.textfield.TextInputEditText
            android:maxLength="100"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            style="@style/UiKit.TextInputLayout.EditText.SingleLine"/>
    </com.google.android.material.textfield.TextInputLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/private_thread_toggle"
        android:background="@drawable/rounded_rectangle_4dp_radius"
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:backgroundTint="?attr/colorBackgroundSecondary">
        <LinearLayout
            android:id="@+id/private_thread_toggle_text"
            android:layout_width="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/private_thread_toggle_switch"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            style="@style/UiKit.ViewGroup.LinearLayout">
            <LinearLayout style="@style/UiKit.ViewGroup.LinearLayout.Horizontal">
                <TextView
                    android:textSize="@dimen/uikit_textsize_large"
                    android:layout_marginBottom="2dp"
                    android:text="@string/private_thread"
                    style="@style/UiKit.TextView.Bold"/>
                <TextView
                    android:id="@+id/private_thread_toggle_badge"
                    android:background="@drawable/rounded_rectangle_8dp_radius"
                    android:paddingLeft="4dp"
                    android:paddingRight="4dp"
                    android:layout_height="wrap_content"
                    android:text="@string/guild_settings_premium_guild_unlocked"
                    android:drawablePadding="4dp"
                    android:textAllCaps="true"
                    android:layout_marginStart="4dp"
                    android:backgroundTint="?attr/colorBackgroundSecondaryAlt"
                    app:drawableStartCompat="@drawable/ic_boosted_badge_12dp"
                    style="@style/UiKit.TextView.Semibold"/>
            </LinearLayout>
            <TextView
                android:textSize="@dimen/uikit_textsize_medium"
                android:textColor="?attr/colorHeaderSecondary"
                android:text="@string/form_private_thread_description"
                style="@style/UiKit.TextView"/>
        </LinearLayout>
        <com.google.android.material.switchmaterial.SwitchMaterial
            android:id="@+id/private_thread_toggle_switch"
            android:clickable="false"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/private_thread_toggle_text"
            app:layout_constraintTop_toTopOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <TextView
        android:text="@string/create_thread_header_1"
        style="@style/UiKit.TextView.Large"/>
    <TextView
        android:id="@+id/auto_archive_duration"
        android:text="@string/create_thread_header_2"
        style="@style/UiKit.TextView.Large"/>
    <View
        android:id="@+id/divider_stroke"
        android:background="?attr/colorBackgroundAccent"
        android:layout_width="match_parent"
        android:layout_height="0.25dp"
        android:layout_marginTop="16dp"/>
</LinearLayout>
