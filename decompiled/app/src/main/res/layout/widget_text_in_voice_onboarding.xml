<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="?attr/colorBackgroundTertiary"
    android:layout_width="match_parent"
    style="@style/UiKit.ViewGroup.LinearLayout">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <FrameLayout
                android:id="@+id/text_in_voice_onboarding_video_container"
                android:background="@drawable/rounded_rectangle_8dp_radius"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="24dp"
                android:backgroundTint="?attr/colorBackgroundTertiary"
                android:outlineProvider="background"
                app:layout_constraintDimensionRatio="1:1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">
                <VideoView
                    android:id="@+id/text_in_voice_onboarding_video"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
                <ImageView
                    android:id="@+id/text_in_voice_onboarding_video_placeholder"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/tiv_onboarding_placeholder"/>
            </FrameLayout>
            <com.facebook.drawee.view.SimpleDraweeView
                android:layout_gravity="center"
                android:id="@+id/text_in_voice_onboarding_video_overlay"
                android:padding="8dp"
                android:clickable="false"
                android:layout_width="64dp"
                android:layout_height="64dp"
                app:backgroundImage="@color/primary_900_alpha_60"
                app:layout_constraintBottom_toBottomOf="@+id/text_in_voice_onboarding_video_container"
                app:layout_constraintEnd_toEndOf="@+id/text_in_voice_onboarding_video_container"
                app:layout_constraintStart_toStartOf="@+id/text_in_voice_onboarding_video_container"
                app:layout_constraintTop_toTopOf="@+id/text_in_voice_onboarding_video_container"
                app:placeholderImage="@drawable/ic_play_arrow_grey_24dp"
                app:placeholderImageScaleType="fitCenter"
                app:roundAsCircle="true"/>
            <com.discord.views.ScreenTitleView
                android:paddingBottom="120dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/text_in_voice_onboarding_video_container"
                app:stv_subtitle="@string/text_in_voice_onboarding_subtitle"
                app:stv_title="@string/text_in_voice_onboarding_title"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
    <com.google.android.material.button.MaterialButton
        android:id="@+id/text_in_voice_onboarding_cta"
        android:layout_marginTop="16dp"
        android:text="@string/text_in_voice_onboarding_cta"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintBottom_toTopOf="@+id/text_in_voice_onboarding_close"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        style="@style/UiKit.Material.Button"/>
    <com.google.android.material.button.MaterialButton
        android:id="@+id/text_in_voice_onboarding_close"
        android:layout_marginBottom="16dp"
        android:text="@string/dismiss"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        style="@style/UiKit.Material.Button.Secondary"/>
</androidx.constraintlayout.widget.ConstraintLayout>
