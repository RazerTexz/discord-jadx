<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    style="@style/UiKit.ViewGroup.Page">
    <ImageView
        android:id="@+id/close_button"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:focusable="true"
        android:clickable="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:src="@drawable/ic_close_24dp"
        android:contentDescription="@string/close"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="?attr/colorInteractiveNormal"/>
    <LinearLayout
        android:layout_gravity="center_vertical"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/close_button">
        <ImageView
            android:layout_gravity="center"
            android:id="@+id/guild_scheduled_event_success_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_events_empty"
            android:importantForAccessibility="no"/>
        <TextView
            android:textSize="26sp"
            android:textColor="?attr/colorHeaderPrimary"
            android:gravity="center"
            android:layout_gravity="center"
            android:id="@+id/guild_scheduled_event_success_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="@string/guild_event_created_modal_header"
            style="@style/UiKit.TextAppearance.Bold"/>
        <TextView
            android:textSize="14sp"
            android:textColor="?attr/colorHeaderSecondary"
            android:gravity="center"
            android:layout_gravity="center"
            android:id="@+id/guild_scheduled_event_success_subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/guild_event_created_modal_body"
            style="@style/UiKit.TextAppearance"/>
        <LinearLayout
            android:background="@drawable/drawable_bg_outline_dark"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            style="@style/UiKit.ViewGroup.LinearLayout.Horizontal">
            <TextView
                android:textSize="16sp"
                android:textColor="?attr/primary_100"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:id="@+id/guild_invite_link"
                android:background="?attr/selectableItemBackground"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="@string/invite_link_example_verified"
                android:singleLine="true"
                android:layout_weight="1"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                style="@style/UiKit.TextView.Bold"/>
        </LinearLayout>
        <com.discord.views.CheckedSetting
            android:id="@+id/guild_invite_never_expire"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            app:cs_subtext="@string/invite_links_expire_after_default"
            app:cs_text="@string/set_invite_link_never_expire"
            app:cs_view_type="switchview"
            style="@style/UiKit.CheckedSetting.Themed"/>
        <com.google.android.material.button.MaterialButton
            android:id="@+id/guild_invite_share_btn"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="16dp"
            android:text="@string/share_link"
            style="@style/UiKit.Material.Button"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
