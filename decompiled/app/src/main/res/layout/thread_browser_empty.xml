<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/thread_browser_empty"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    style="@style/UiKit.ViewGroup.ConstraintLayout">
    <ImageView
        android:id="@+id/thread_icon"
        android:background="@drawable/ic_sparkle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_chat_message_white_24dp"
        android:scaleType="centerInside"
        android:importantForAccessibility="no"
        app:layout_constraintBottom_toTopOf="@+id/thread_browser_empty_heading"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed"
        app:tint="@color/primary_300"/>
    <TextView
        android:id="@+id/thread_browser_empty_heading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/thread_browser_empty_state_active_header"
        android:textAlignment="center"
        app:layout_constraintBottom_toTopOf="@+id/thread_browser_empty_subheading"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/thread_icon"
        style="@style/UiKit.TextView.H1"/>
    <TextView
        android:textSize="@dimen/uikit_textsize_medium"
        android:textColor="?attr/colorHeaderSecondary"
        android:id="@+id/thread_browser_empty_subheading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="@string/thread_browser_empty_state_subtext"
        android:fontFamily="?attr/font_primary_normal"
        android:textAlignment="center"
        app:layout_constraintBottom_toTopOf="@+id/thread_browser_empty_create_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/thread_browser_empty_heading"/>
    <com.google.android.material.button.MaterialButton
        android:id="@+id/thread_browser_empty_create_button"
        android:layout_width="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/create_thread"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/thread_browser_empty_subheading"
        style="@style/UiKit.Material.Button"/>
</androidx.constraintlayout.widget.ConstraintLayout>
