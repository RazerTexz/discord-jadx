<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:elevation="2dp"
    style="@style/UiKit.ViewGroup">
    <LinearLayout style="@style/UiKit.ViewGroup.LinearLayout">
        <RelativeLayout
            android:id="@+id/integration_header_container"
            android:background="?attr/selectableItemBackground"
            android:paddingLeft="16dp"
            android:paddingTop="4dp"
            android:paddingRight="16dp"
            android:focusable="true"
            android:clickable="true"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/integration_icon"
                android:layout_margin="8dp"
                android:layout_centerVertical="true"
                android:contentDescription="@string/integrations"
                style="@style/UiKit.ImageView"/>
            <LinearLayout
                android:id="@+id/integration_name_container"
                android:layout_centerVertical="true"
                android:layout_toStartOf="@+id/integration_settings_icon"
                android:layout_toEndOf="@+id/integration_icon"
                style="@style/UiKit.ViewGroup.LinearLayout">
                <TextView
                    android:id="@+id/integration_owner_name"
                    style="@style/UiKit.TextView.H1"/>
                <TextView
                    android:textColor="?attr/primary_100"
                    android:id="@+id/integration_name"
                    style="@style/UiKit.TextView"/>
            </LinearLayout>
            <ImageView
                android:id="@+id/integration_settings_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="?attr/ic_settings"
                android:layout_centerVertical="true"
                android:contentDescription="@string/integration_settings"
                android:layout_alignParentEnd="true"/>
            <ProgressBar
                android:id="@+id/integration_syncing_progress_bar"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:indeterminate="true"
                android:layout_alignTop="@+id/integration_settings_icon"
                android:layout_alignBottom="@+id/integration_settings_icon"
                android:layout_centerVertical="true"
                android:layout_alignStart="@+id/integration_settings_icon"
                android:layout_alignEnd="@+id/integration_settings_icon"/>
        </RelativeLayout>
        <com.discord.views.CheckedSetting
            android:id="@+id/integration_sync_switch"
            app:cs_text="@string/sync_this_account"
            app:cs_text_size="@dimen/uikit_textsize_medium"
            app:cs_view_type="switchview"
            style="@style/UiKit.CheckedSetting.Themed"/>
        <View style="@style/UiKit.Settings.Divider"/>
    </LinearLayout>
    <View
        android:id="@+id/integration_header_disabled_overlay"
        android:background="@color/white_alpha_70"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</FrameLayout>
