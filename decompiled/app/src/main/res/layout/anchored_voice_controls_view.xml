<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" style="@style/UiKit.ViewGroup.LinearLayout">
    <LinearLayout
        android:id="@+id/voice_fullscreen_controls_controls_wrap"
        style="@style/UiKit.ViewGroup.LinearLayout.Horizontal">
        <ImageView
            android:id="@+id/voice_fullscreen_controls_camera"
            android:background="?attr/selectableItemBackground"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            android:focusable="true"
            android:clickable="true"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_videocam_white_24dp"
            android:layout_weight="1"
            android:contentDescription="@string/camera"/>
        <ImageView
            android:id="@+id/voice_fullscreen_controls_screenshare"
            android:background="?attr/selectableItemBackground"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            android:focusable="true"
            android:clickable="true"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_mobile_screenshare_24dp"
            android:layout_weight="1"
            android:contentDescription="@string/deafen"
            app:tint="?attr/colorInteractiveNormal"/>
        <ImageView
            android:id="@+id/voice_fullscreen_controls_mute_state"
            android:background="?attr/selectableItemBackground"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            android:focusable="true"
            android:clickable="true"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:src="?attr/ic_mic_state"
            android:layout_weight="1"
            android:contentDescription="@string/mute"/>
        <ImageView
            android:id="@+id/voice_fullscreen_controls_speaker"
            android:background="?attr/selectableItemBackground"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            android:focusable="true"
            android:clickable="true"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_audio_output_white_24dp"
            android:layout_weight="1"
            android:contentDescription="@string/switch_audio_output"
            app:tint="?attr/colorInteractiveNormal"/>
        <ImageView
            android:id="@+id/voice_fullscreen_controls_disconnect"
            android:background="?attr/selectableItemBackground"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            android:focusable="true"
            android:clickable="true"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:src="@drawable/ic_call_disconnect_24dp"
            android:layout_weight="1"
            android:contentDescription="@string/disconnect_from_voice"
            app:tint="@color/status_red_500"/>
    </LinearLayout>
    <com.google.android.material.button.MaterialButton
        android:id="@+id/voice_fullscreen_controls_ptt"
        android:visibility="gone"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:text="@string/input_mode_ptt"
        style="@style/UiKit.Material.Button"/>
</LinearLayout>
