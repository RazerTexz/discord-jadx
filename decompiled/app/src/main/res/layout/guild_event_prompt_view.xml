<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/rounded_rectangle_8dp_radius"
    android:paddingTop="12dp"
    android:paddingBottom="12dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:foreground="?attr/bg_pressed_highlight"
    android:paddingStart="12dp"
    android:paddingEnd="16dp"
    android:backgroundTint="?attr/colorBackgroundSecondary">
    <ImageView
        android:id="@+id/icon_bg"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/drawable_uikit_white_circle"
        android:importantForAccessibility="no"
        app:layout_constraintBottom_toBottomOf="@+id/subtitle"
        app:layout_constraintDimensionRatio="H,1:1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/title"
        app:tint="@color/status_green_600"
        style="@style/UiKit.ImageView"/>
    <ImageView
        android:id="@+id/icon"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:src="@drawable/ic_channel_stage_24dp"
        android:scaleType="centerInside"
        android:importantForAccessibility="no"
        app:layout_constraintBottom_toBottomOf="@+id/icon_bg"
        app:layout_constraintLeft_toLeftOf="@+id/icon_bg"
        app:layout_constraintRight_toRightOf="@+id/icon_bg"
        app:layout_constraintTop_toTopOf="@+id/icon_bg"
        app:tint="@color/white"
        style="@style/UiKit.ImageView"/>
    <com.google.android.material.textview.MaterialTextView
        android:textAppearance="@style/UiKit.TextAppearance.Semibold"
        android:textSize="16sp"
        android:textColor="?attr/colorHeaderPrimary"
        android:id="@+id/title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/stage_channel_start_title"
        android:layout_marginStart="16dp"
        app:layout_constraintBottom_toTopOf="@+id/subtitle"
        app:layout_constraintEnd_toStartOf="@+id/arrow"
        app:layout_constraintStart_toEndOf="@+id/icon"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed"
        style="@style/UiKit.TextView.SingleLine"/>
    <com.google.android.material.textview.MaterialTextView
        android:textSize="12sp"
        android:textColor="?attr/colorHeaderSecondary"
        android:id="@+id/subtitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/stage_channel_start_subtitle"
        android:layout_marginStart="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/arrow"
        app:layout_constraintStart_toEndOf="@+id/icon"
        app:layout_constraintTop_toBottomOf="@+id/title"
        style="@style/UiKit.TextView.Medium.SingleLine"/>
    <ImageView
        android:id="@+id/arrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_arrow_end_24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="?attr/colorHeaderPrimary"/>
</androidx.constraintlayout.widget.ConstraintLayout>
