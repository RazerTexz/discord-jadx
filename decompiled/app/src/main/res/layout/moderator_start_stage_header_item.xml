<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/moderator_start_stage_icon"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_mentions_empty"
        android:adjustViewBounds="true"
        android:importantForAccessibility="no"
        app:layout_constraintBottom_toTopOf="@+id/moderator_start_stage_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed"
        app:layout_constraintWidth_percent="0.33"/>
    <TextView
        android:textAppearance="@style/UiKit.TextAppearance.Bold"
        android:textSize="30sp"
        android:gravity="center"
        android:id="@+id/moderator_start_stage_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="24dp"
        android:layout_marginRight="32dp"
        android:text="@string/stage_start_prompt_title_moderator"
        app:layout_constraintBottom_toTopOf="@+id/moderator_start_stage_subtitle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/moderator_start_stage_icon"/>
    <TextView
        android:textSize="@dimen/uikit_textsize_medium"
        android:textColor="?attr/colorHeaderSecondary"
        android:gravity="center"
        android:id="@+id/moderator_start_stage_subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="24dp"
        android:text="@string/stage_start_prompt_subtitle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/moderator_start_stage_title"
        style="@style/UiKit.TextView"/>
</androidx.constraintlayout.widget.ConstraintLayout>
