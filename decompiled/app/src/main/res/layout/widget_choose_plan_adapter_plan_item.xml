<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/plan_item_container"
    android:background="?attr/colorBackgroundPrimary"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp"
    android:layout_marginBottom="8dp"
    android:minHeight="56dp"
    app:cardBackgroundColor="?attr/colorBackgroundSecondary"
    app:cardCornerRadius="8dp"
    app:cardElevation="0dp">
    <ImageView
        android:id="@+id/plan_item_border"
        android:background="?attr/colorBackgroundSecondary"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="1dp"
        app:cardBackgroundColor="?attr/colorBackgroundSecondary"
        app:cardCornerRadius="8dp"
        app:cardElevation="0dp"
        app:cardForegroundColor="#00000000">
        <LinearLayout
            android:gravity="center_vertical"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            style="@style/UiKit.ViewGroup.LinearLayout.Horizontal">
            <ImageView
                android:id="@+id/plan_item_icon"
                android:paddingRight="8dp"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_plan_premium_and_premium_guild_13"
                android:importantForAccessibility="no"
                style="@style/UiKit.ImageView"/>
            <LinearLayout
                android:gravity="center_vertical"
                android:layout_width="0dp"
                android:layout_weight="1"
                style="@style/UiKit.ViewGroup.LinearLayout">
                <TextView
                    android:textSize="@dimen/uikit_textsize_large"
                    android:textColor="?attr/colorHeaderPrimary"
                    android:id="@+id/plan_item_name"
                    style="@style/UiKit.TextView.Semibold"/>
                <TextView
                    android:textColor="?attr/colorHeaderSecondary"
                    android:id="@+id/plan_item_current_plan"
                    android:text="@string/premium_current_active_subscription"
                    style="@style/UiKit.TextView"/>
            </LinearLayout>
            <TextView
                android:textSize="@dimen/uikit_textsize_small"
                android:textColor="?attr/colorHeaderPrimary"
                android:gravity="center_vertical"
                android:id="@+id/plan_item_price"
                app:drawableEndCompat="?attr/ic_navigate_next"
                style="@style/UiKit.TextView.Semibold"/>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>
</com.google.android.material.card.MaterialCardView>
