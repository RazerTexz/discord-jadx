<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android" style="@style/UiKit.ViewGroup.Page">
    <com.google.android.material.appbar.AppBarLayout style="@style/AppTheme.AppBarLayout.Flat">
        <androidx.appcompat.widget.Toolbar style="@style/AppTheme.Toolbar"/>
    </com.google.android.material.appbar.AppBarLayout>
    <ScrollView
        android:id="@+id/server_settings_overview_scroll"
        style="@style/UiKit.ViewGroup.NestedScrollView.AppBarScrollingViewBehavior">
        <LinearLayout
            android:focusableInTouchMode="true"
            style="@style/UiKit.ViewGroup.LinearLayout">
            <include
                android:id="@+id/header"
                layout="@layout/view_server_settings_icon_name"/>
            <View style="@style/UiKit.Settings.Divider"/>
            <include
                android:id="@+id/afk"
                layout="@layout/widget_server_settings_overview_section_afk_channel"/>
            <View style="@style/UiKit.Settings.Divider"/>
            <include
                android:id="@+id/systemChannel"
                layout="@layout/view_server_settings_system_channel_wrap"/>
            <View style="@style/UiKit.Settings.Divider"/>
            <include
                android:id="@+id/notifications"
                layout="@layout/view_server_settings_notifications"/>
            <include
                android:id="@+id/uploadBanner"
                layout="@layout/view_server_settings_upload_banner"/>
            <include
                android:id="@+id/uploadSplash"
                layout="@layout/view_server_settings_upload_splash"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="64dp"/>
        </LinearLayout>
    </ScrollView>
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/save"
        android:contentDescription="@string/save"
        style="@style/Settings.FloatingActionButton.Save"/>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
