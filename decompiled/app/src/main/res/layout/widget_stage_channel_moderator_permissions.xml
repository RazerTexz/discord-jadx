<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" style="@style/UiKit.ViewGroup.CoordinatorLayout.Page">
    <androidx.core.widget.NestedScrollView
        android:fitsSystemWindows="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_behavior="com.discord.app.AppScrollingNestedViewBehavior">
        <LinearLayout
            android:orientation="vertical"
            android:background="?attr/colorBackgroundPrimary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/UiKit.ViewGroup.LinearLayout">
            <TextView
                android:textSize="@dimen/uikit_textsize_medium"
                android:textColor="?attr/colorHeaderSecondary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/channel_permissions_moderator_description"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                style="@style/UiKit.TextView"/>
            <com.discord.widgets.channels.permissions.AddPermissionOwnerView
                android:id="@+id/add_permission_owner_button"
                android:background="?attr/colorBackgroundSecondary"
                android:paddingLeft="18dp"
                android:paddingRight="18dp"
                android:focusable="true"
                android:clickable="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:foreground="?attr/selectableItemBackground"
                android:minHeight="48dp"
                app:apov_label_text="Add Stage Moderators"/>
            <TextView
                android:textSize="@dimen/uikit_textsize_small"
                android:textColor="?attr/colorHeaderSecondary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="8dp"
                android:text="@string/channel_permissions_moderator_current_title"
                android:textAllCaps="true"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                style="@style/UiKit.TextView.Bold"/>
            <com.discord.widgets.channels.permissions.PermissionOwnerListView
                android:id="@+id/roles_permission_owners_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:nestedScrollingEnabled="false"/>
            <com.discord.widgets.channels.permissions.PermissionOwnerListView
                android:id="@+id/members_permission_owners_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false"/>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
