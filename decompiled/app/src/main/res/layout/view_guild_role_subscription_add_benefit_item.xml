<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:background="@drawable/ripple_rounded_bg_secondary"
    android:padding="@dimen/guild_role_subscription_setup_default_padding"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <View
        android:id="@+id/guild_role_subscription_add_benefit_image_circle"
        android:background="@drawable/drawable_circle_dashed_4dp"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:alpha="0.06"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <ImageView
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_add_24dp"
        android:contentDescription="@string/channel_select"
        app:layout_constraintBottom_toBottomOf="@+id/guild_role_subscription_add_benefit_image_circle"
        app:layout_constraintEnd_toEndOf="@+id/guild_role_subscription_add_benefit_image_circle"
        app:layout_constraintStart_toStartOf="@+id/guild_role_subscription_add_benefit_image_circle"
        app:layout_constraintTop_toTopOf="@+id/guild_role_subscription_add_benefit_image_circle"
        app:tint="?attr/colorInteractiveActive"/>
    <TextView
        android:textColor="?attr/colorHeaderPrimary"
        android:id="@+id/guild_role_subscription_add_benefit_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/guild_role_subscription_setup_default_padding"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/guild_role_subscription_add_benefit_image_circle"
        app:layout_constraintTop_toTopOf="parent"
        style="@style/UiKit.TextView.Large"/>
</androidx.constraintlayout.widget.ConstraintLayout>
