<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" style="@style/UiKit.ViewGroup.Page">
    <com.google.android.material.appbar.AppBarLayout style="@style/AppTheme.AppBarLayout.Flat">
        <androidx.appcompat.widget.Toolbar style="@style/AppTheme.Toolbar"/>
    </com.google.android.material.appbar.AppBarLayout>
    <ScrollView style="@style/UiKit.ViewGroup.RelativeLayout.AppBarScrollingViewBehavior">
        <LinearLayout style="@style/UiKit.ViewGroup.LinearLayout">
            <TextView
                android:textSize="@dimen/uikit_textsize_medium"
                android:id="@+id/settings_language_header"
                android:text="@string/language"
                style="@style/UiKit.Settings.Item.Header"/>
            <RelativeLayout
                android:id="@+id/settings_language_current"
                android:padding="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textColor="?attr/primary_100"
                    android:text="@string/language"
                    android:layout_toStartOf="@+id/settings_language_current_flag"
                    android:layout_alignParentStart="true"
                    style="@style/UiKit.TextView"/>
                <ImageView
                    android:id="@+id/settings_language_current_flag"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_centerVertical="true"
                    android:contentDescription="@string/language_select"
                    android:layout_toStartOf="@+id/settings_language_current_text"
                    style="@style/UiKit.ImageView"/>
                <TextView
                    android:textColor="?attr/primary_100"
                    android:id="@+id/settings_language_current_text"
                    android:drawablePadding="16dp"
                    android:layout_alignParentEnd="true"
                    app:drawableEndCompat="@drawable/icon_carrot"
                    style="@style/UiKit.TextView"/>
            </RelativeLayout>
            <View style="@style/UiKit.Settings.Divider"/>
            <TextView
                android:textSize="@dimen/uikit_textsize_medium"
                android:id="@+id/settings_language_sync_header"
                android:text="@string/sync"
                style="@style/UiKit.Settings.Item.Header"/>
            <com.discord.views.CheckedSetting
                android:id="@+id/settings_language_sync_check"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cs_text="@string/settings_sync"
                app:cs_view_type="switchview"
                style="@style/UiKit.CheckedSetting.Themed"/>
            <View style="@style/UiKit.Settings.Divider"/>
        </LinearLayout>
    </ScrollView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
