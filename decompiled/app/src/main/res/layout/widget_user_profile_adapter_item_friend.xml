<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="?attr/selectableItemBackground"
    android:padding="16dp"
    style="@style/UiKit.ViewGroup.RelativeLayout">
    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/user_profile_adapter_item_friend_avatar"
        style="@style/Avatar.Large"/>
    <com.discord.views.StatusView
        android:id="@+id/user_profile_adapter_item_friend_status"
        android:layout_width="16dp"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_status_idle_16dp"
        android:layout_alignBottom="@+id/user_profile_adapter_item_friend_avatar"
        android:translationX="2dp"
        android:translationY="2dp"
        android:layout_alignEnd="@+id/user_profile_adapter_item_friend_avatar"
        app:sv_background_color="?attr/colorPrimary"
        app:sv_border_width="2dp"
        app:sv_corner_radius="2dp"/>
    <LinearLayout
        android:layout_centerVertical="true"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="4dp"
        android:layout_toStartOf="@+id/user_profile_adapter_item_friend_mutual"
        android:layout_toEndOf="@+id/user_profile_adapter_item_friend_avatar"
        style="@style/UiKit.ViewGroup.LinearLayout">
        <TextView
            android:id="@+id/user_profile_adapter_item_friend_user_name"
            android:singleLine="true"
            style="@style/UiKit.TextView.Large"/>
        <com.discord.utilities.view.text.SimpleDraweeSpanTextView
            android:id="@+id/user_profile_adapter_item_friend_user_game"
            android:paddingTop="4dp"
            android:singleLine="true"
            style="@style/UiKit.TextView"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/user_profile_adapter_item_friend_mutual"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        style="@style/UiKit.ViewGroup.LinearLayout.Horizontal">
        <include
            android:id="@+id/mutual_server_1"
            layout="@layout/widget_user_profile_adapter_item_friend_mutual_server"/>
        <include
            android:id="@+id/mutual_server_2"
            layout="@layout/widget_user_profile_adapter_item_friend_mutual_server"/>
        <include
            android:id="@+id/mutual_server_3"
            layout="@layout/widget_user_profile_adapter_item_friend_mutual_server"/>
        <include
            android:id="@+id/mutual_server_4"
            layout="@layout/widget_user_profile_adapter_item_friend_mutual_server"/>
    </LinearLayout>
</RelativeLayout>
