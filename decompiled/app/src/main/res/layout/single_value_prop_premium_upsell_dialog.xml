<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:maxWidth="312dp"
    style="@style/UiKit.ViewGroup.LinearLayout">
    <androidx.constraintlayout.widget.ConstraintLayout
        app:layout_constraintBottom_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        style="@style/UiKit.ViewGroup.LinearLayout">
        <View
            android:id="@+id/transparent_space"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <View
            android:id="@+id/content_background"
            android:background="?attr/colorBackgroundPrimary"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/transparent_space"/>
        <ImageView
            android:layout_gravity="center_horizontal"
            android:id="@+id/value_prop_image"
            android:layout_width="224dp"
            android:layout_height="154dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            app:layout_constraintBottom_toTopOf="@+id/upsell_header_text"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            style="@style/UiKit.ImageView"/>
        <TextView
            android:textSize="@dimen/uikit_textsize_large"
            android:textColor="?attr/colorInteractiveActive"
            android:id="@+id/upsell_header_text"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:layout_marginTop="24dp"
            android:fontFamily="@font/ginto_medium"
            android:textAlignment="center"
            app:layout_constraintBottom_toTopOf="@+id/upsell_body_text"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/value_prop_image"
            style="@style/UiKit.TextView"/>
        <TextView
            android:id="@+id/upsell_body_text"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="24dp"
            android:textAlignment="center"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/upsell_header_text"
            style="@style/UiKit.TextView"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <LinearLayout
        android:gravity="end|center_vertical"
        android:id="@+id/button_container"
        style="@style/UiKit.Dialog.ButtonContainer">
        <com.google.android.material.button.MaterialButton
            android:textColor="?attr/colorHeaderPrimary"
            android:id="@+id/close_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/close"
            style="@style/UiKit.Material.Button.Transparent"/>
        <com.discord.views.premium.ShinyButton
            android:id="@+id/get_premium_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:sb_drawable_start="@drawable/ic_nitro_badge_white"
            app:sb_text="@string/premium_settings_get"/>
    </LinearLayout>
</LinearLayout>
