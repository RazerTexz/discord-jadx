<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:theme="@style/AppTheme.Dark"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layoutDirection="locale"
    app:cardBackgroundColor="@color/primary_630"
    app:cardCornerRadius="8dp"
    app:cardElevation="8dp">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:background="@color/primary_700"
            android:padding="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minWidth="240dp">
            <ImageView
                android:id="@+id/overlay_network_icon"
                android:padding="2dp"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_voice_quality_fine"
                android:layout_marginStart="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>
            <TextView
                android:textColor="@color/white"
                android:id="@+id/overlay_guild_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                app:fontFamily="?attr/font_primary_semibold"
                app:layout_constrainedHeight="true"
                app:layout_constraintBottom_toTopOf="@+id/overlay_channel_name"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintLeft_toRightOf="@+id/overlay_network_icon"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintStart_toEndOf="@+id/overlay_network_icon"
                app:layout_constraintTop_toTopOf="parent"
                style="@style/UiKit.TextView.Large.SingleLine"/>
            <TextView
                android:id="@+id/overlay_channel_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintLeft_toLeftOf="@+id/overlay_guild_name"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintStart_toStartOf="@+id/overlay_guild_name"
                app:layout_constraintTop_toBottomOf="@+id/overlay_guild_name"
                style="@style/UiKit.TextView.Subtext"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <TextView
            android:id="@+id/overlay_invite_link"
            android:text="@string/overlay_menu_get_invite"
            android:drawablePadding="16dp"
            app:drawableStartCompat="@drawable/ic_diag_link_24dp"
            app:drawableTint="?attr/colorInteractiveNormal"
            app:fontFamily="?attr/font_primary_semibold"
            style="@style/UiKit.Settings.Item.Icon"/>
        <TextView
            android:id="@+id/overlay_switch_channels"
            android:text="@string/overlay_menu_switch_channels"
            android:drawablePadding="16dp"
            app:drawableStartCompat="@drawable/ic_channel_text_white_a60_24dp"
            app:fontFamily="?attr/font_primary_semibold"
            style="@style/UiKit.Settings.Item.Icon"/>
        <TextView
            android:id="@+id/overlay_open_app"
            android:layout_marginBottom="8dp"
            android:text="@string/overlay_menu_open_discord"
            android:drawablePadding="16dp"
            app:drawableStartCompat="@drawable/img_logo_square"
            app:fontFamily="?attr/font_primary_semibold"
            style="@style/UiKit.Settings.Item.Icon"/>
    </LinearLayout>
</androidx.cardview.widget.CardView>
