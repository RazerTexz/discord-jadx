<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" style="@style/UiKit.ViewGroup.Page">
    <com.google.android.material.appbar.AppBarLayout style="@style/AppTheme.AppBarLayout.Flat">
        <androidx.appcompat.widget.Toolbar style="@style/AppTheme.Toolbar"/>
    </com.google.android.material.appbar.AppBarLayout>
    <androidx.core.widget.NestedScrollView
        android:id="@+id/role_settings_overview_scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        style="@style/UiKit.ViewGroup.NestedScrollView.AppBarScrollingViewBehavior">
        <LinearLayout
            android:paddingBottom="@dimen/padding_bottom_fab_screen"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:descendantFocusability="beforeDescendants"
            style="@style/UiKit.ViewGroup.LinearLayout">
            <TextView
                android:text="@string/form_label_role_name"
                style="@style/UiKit.Settings.Item.Header"/>
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/edit_role_name"
                    android:hint="@string/form_label_role_name"
                    style="@style/UiKit.TextInputLayout.Primary">
                    <com.google.android.material.textfield.TextInputEditText
                        android:maxLength="100"
                        android:inputType="textNoSuggestions"
                        style="@style/UiKit.TextInputLayout.EditText.SingleLine"/>
                </com.google.android.material.textfield.TextInputLayout>
                <View
                    android:id="@+id/role_settings_edit_name_disabled_overlay"
                    android:background="@color/white_alpha_30"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            </FrameLayout>
            <TextView
                android:text="@string/form_label_role_color"
                style="@style/UiKit.Settings.Item.Header"/>
            <RelativeLayout
                android:id="@+id/role_settings_color_selector_container"
                android:background="?attr/selectableItemBackground"
                android:focusable="true"
                android:clickable="true"
                android:layout_width="match_parent"
                android:layout_height="64dp">
                <TextView
                    android:layout_margin="16dp"
                    android:text="@string/form_label_role_color"
                    android:layout_centerVertical="true"
                    android:layout_alignParentStart="true"
                    style="@style/UiKit.TextView"/>
                <View
                    android:id="@+id/role_settings_current_color_display"
                    android:background="@drawable/drawable_circle_brand"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_margin="16dp"
                    android:layout_alignParentEnd="true"
                    android:elevation="2dp"/>
                <View
                    android:id="@+id/role_settings_color_disabled_overlay"
                    android:background="@color/white_alpha_30"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            </RelativeLayout>
            <View
                android:id="@+id/role_settings_role_icon_divider"
                style="@style/UiKit.Settings.Divider"/>
            <TextView
                android:id="@+id/role_settings_role_icon_header"
                android:text="@string/form_label_role_icon"
                style="@style/UiKit.Settings.Item.Header"/>
            <RelativeLayout
                android:id="@+id/role_settings_icon_container"
                android:layout_width="match_parent"
                android:layout_height="64dp">
                <LinearLayout
                    android:layout_margin="16dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentStart="true"
                    style="@style/UiKit.ViewGroup.LinearLayout">
                    <TextView
                        android:text="@string/form_label_role_icon"
                        style="@style/UiKit.TextView"/>
                    <TextView
                        android:text="@string/form_label_role_icon_subtitle_mobile"
                        style="@style/UiKit.TextView.Subtext"/>
                </LinearLayout>
                <com.discord.widgets.roles.RoleIconView
                    android:id="@+id/role_settings_role_icon"
                    android:layout_width="32sp"
                    android:layout_height="32sp"
                    android:layout_margin="16dp"
                    android:layout_alignParentEnd="true"/>
            </RelativeLayout>
            <View style="@style/UiKit.Settings.Divider"/>
            <TextView
                android:text="@string/form_label_role_settings"
                style="@style/UiKit.Settings.Item.Header"/>
            <com.discord.views.CheckedSetting
                android:id="@+id/role_settings_hoist_checkedsetting"
                app:cs_text="@string/form_label_hoist_description"
                style="@style/UiKit.CheckedSetting.Themed"/>
            <com.discord.views.CheckedSetting
                android:id="@+id/role_settings_mentionable_checkedsetting"
                app:cs_subtext="@string/form_label_mentionable_description"
                app:cs_text="@string/form_label_mentionable"
                style="@style/UiKit.CheckedSetting.Themed"/>
            <View style="@style/UiKit.Settings.Divider"/>
            <TextView
                android:text="@string/role_permissions_section_general_guild"
                style="@style/UiKit.Settings.Item.Header"/>
            <com.discord.views.CheckedSetting
                android:id="@+id/role_settings_read_messages"
                app:cs_subtext="@string/role_permissions_view_channel_description"
                app:cs_text="@string/role_permissions_view_channel"
                style="@style/UiKit.CheckedSetting.Themed"/>
            <com.discord.views.CheckedSetting
                android:id="@+id/role_settings_manage_channels"
                app:cs_subtext="@string/role_permissions_manage_channels_description"
                app:cs_text="@string/manage_channels"
                style="@style/UiKit.CheckedSetting.Themed"/>
            <com.discord.views.CheckedSetting
                android:id="@+id/role_settings_manage_roles"
                app:cs_subtext="@string/role_permissions_manage_roles_description"
                app:cs_text="@string/manage_roles"
                style="@style/UiKit.CheckedSetting.Themed"/>
            <com.discord.views.CheckedSetting
                android:id="@+id/role_settings_manage_emojis_and_stickers"
                app:cs_subtext="@string/role_permissions_manage_emojis_and_stickers_description"
                app:cs_text="@string/manage_emojis_and_stickers"
                style="@style/UiKit.CheckedSetting.Themed"/>
            <com.discord.views.CheckedSetting
                android:id="@+id/role_settings_view_audit_log"
                app:cs_subtext="@string/role_permissions_view_audit_log_description"
                app:cs_text="@string/view_audit_log"
                style="@style/UiKit.CheckedSetting.Themed"/>
            <com.discord.views.CheckedSetting
                android:id="@+id/role_settings_view_guild_analytics"
                app:cs_subtext="@string/role_permissions_view_guild_analytics_description"
                app:cs_text="@string/view_guild_analytics"
                style="@style/UiKit.CheckedSetting.Themed"/>
            <com.discord.views.CheckedSetting
                android:id="@+id/role_settings_manage_webhooks"
                app:cs_subtext="@string/role_permissions_manage_webhooks_description"
                app:cs_text="@string/manage_webhooks"
                style="@style/UiKit.CheckedSetting.Themed"/>
            <com.discord.views.CheckedSetting
                android:id="@+id/role_settings_manage_server"
                app:cs_subtext="@string/role_permissions_manage_server_description"
                app:cs_text="@string/manage_server"
                style="@style/UiKit.CheckedSetting.Themed"/>
            <View style="@style/UiKit.Settings.Divider"/>
            <TextView
                android:text="@string/role_permissions_section_membership"
                style="@style/UiKit.Settings.Item.Header"/>
            <com.discord.views.CheckedSetting
                android:id="@+id/role_settings_create_instant_invite"
                app:cs_subtext="@string/role_permissions_create_instant_invite_description"
                app:cs_text="@string/create_instant_invite"
                style="@style/UiKit.CheckedSetting.Themed"/>
            <com.discord.views.CheckedSetting
                android:id="@+id/role_settings_change_nickname"
                app:cs_subtext="@string/role_permissions_change_nickname_description"
                app:cs_text="@string/change_nickname"
                style="@style/UiKit.CheckedSetting.Themed"/>
            <com.discord.views.CheckedSetting
                android:id="@+id/role_settings_manage_nicknames"
                app:cs_subtext="@string/role_permissions_manage_nicknames_description"
                app:cs_text="@string/manage_nicknames"
                style="@style/UiKit.CheckedSetting.Themed"/>
            <com.discord.views.CheckedSetting
                android:id="@+id/role_settings_kick_members"
                app:cs_subtext="@string/role_permissions_kick_members_description"
                app:cs_text="@string/kick_members"
                style="@style/UiKit.CheckedSetting.Themed"/>
            <com.discord.views.CheckedSetting
                android:id="@+id/role_settings_ban_members"
                app:cs_subtext="@string/role_permissions_ban_members_description"
                app:cs_text="@string/ban_members"
                style="@style/UiKit.CheckedSetting.Themed"/>
            <com.discord.views.CheckedSetting
                android:id="@+id/role_settings_moderate_member"
                app:cs_subtext="@string/role_permissions_moderate_member_description"
                app:cs_text="@string/moderate_member"
                style="@style/UiKit.CheckedSetting.Themed"/>
            <View style="@style/UiKit.Settings.Divider"/>
            <TextView
                android:text="@string/role_permissions_section_text"
                style="@style/UiKit.Settings.Item.Header"/>
            <com.discord.views.CheckedSetting
                android:id="@+id/role_settings_send_messages"
                app:cs_subtext="@string/role_permissions_send_messages_description"
                app:cs_text="@string/send_messages"
                style="@style/UiKit.CheckedSetting.Themed"/>
            <com.discord.views.CheckedSetting
                android:id="@+id/role_settings_send_messages_in_threads"
                app:cs_subtext="@string/role_permissions_send_messages_in_threads_description"
                app:cs_text="@string/send_messages_in_threads"
                style="@style/UiKit.CheckedSetting.Themed"/>
            <com.discord.views.CheckedSetting
                android:id="@+id/role_settings_create_public_threads"
                app:cs_subtext="@string/role_permissions_create_public_threads_description"
                app:cs_text="@string/create_public_threads"
                style="@style/UiKit.CheckedSetting.Themed"/>
            <com.discord.views.CheckedSetting
                android:id="@+id/role_settings_create_private_threads"
                app:cs_subtext="@string/role_permissions_create_private_threads_description"
                app:cs_text="@string/create_private_threads"
                style="@style/UiKit.CheckedSetting.Themed"/>
            <com.discord.views.CheckedSetting
                android:id="@+id/role_settings_embed_links"
                app:cs_subtext="@string/role_permissions_embed_links_description"
                app:cs_text="@string/embed_links"
                style="@style/UiKit.CheckedSetting.Themed"/>
            <com.discord.views.CheckedSetting
                android:id="@+id/role_settings_attach_files"
                app:cs_subtext="@string/role_permissions_attach_files_description"
                app:cs_text="@string/attach_files"
                style="@style/UiKit.CheckedSetting.Themed"/>
            <com.discord.views.CheckedSetting
                android:id="@+id/role_settings_add_reactions"
                app:cs_subtext="@string/role_permissions_add_reactions_description"
                app:cs_text="@string/add_reactions"
                style="@style/UiKit.CheckedSetting.Themed"/>
            <com.discord.views.CheckedSetting
                android:id="@+id/role_settings_use_external_emojis"
                app:cs_subtext="@string/role_permissions_use_external_emojis_description"
                app:cs_text="@string/role_permissions_use_external_emojis"
                style="@style/UiKit.CheckedSetting.Themed"/>
            <com.discord.views.CheckedSetting
                android:id="@+id/role_settings_use_external_stickers"
                app:cs_subtext="@string/role_permissions_use_external_stickers_description"
                app:cs_text="@string/role_permissions_use_external_stickers"
                style="@style/UiKit.CheckedSetting.Themed"/>
            <com.discord.views.CheckedSetting
                android:id="@+id/role_settings_mention_everyone"
                app:cs_subtext="@string/role_permissions_mention_everyone_description"
                app:cs_text="@string/mention_everyone"
                style="@style/UiKit.CheckedSetting.Themed"/>
            <com.discord.views.CheckedSetting
                android:id="@+id/role_settings_manage_messages"
                app:cs_subtext="@string/role_permissions_manage_messages_description"
                app:cs_text="@string/manage_messages"
                style="@style/UiKit.CheckedSetting.Themed"/>
            <com.discord.views.CheckedSetting
                android:id="@+id/role_settings_manage_threads"
                app:cs_subtext="@string/role_permissions_manage_threads_description"
                app:cs_text="@string/manage_threads"
                style="@style/UiKit.CheckedSetting.Themed"/>
            <com.discord.views.CheckedSetting
                android:id="@+id/role_settings_read_message_history"
                app:cs_subtext="@string/role_permissions_read_message_history_description"
                app:cs_text="@string/read_message_history"
                style="@style/UiKit.CheckedSetting.Themed"/>
            <com.discord.views.CheckedSetting
                android:id="@+id/role_settings_send_tts_messages"
                app:cs_subtext="@string/send_tts_messages_description"
                app:cs_text="@string/send_tts_messages"
                style="@style/UiKit.CheckedSetting.Themed"/>
            <com.discord.views.CheckedSetting
                android:id="@+id/role_settings_use_application_commands"
                app:cs_subtext="@string/role_permissions_use_application_commands_guild_description"
                app:cs_text="@string/role_permissions_use_application_commands"
                style="@style/UiKit.CheckedSetting.Themed"/>
            <View style="@style/UiKit.Settings.Divider"/>
            <TextView
                android:text="@string/role_permissions_section_voice"
                style="@style/UiKit.Settings.Item.Header"/>
            <com.discord.views.CheckedSetting
                android:id="@+id/role_settings_voice_connect"
                app:cs_subtext="@string/role_permissions_connect_description"
                app:cs_text="@string/connect"
                style="@style/UiKit.CheckedSetting.Themed"/>
            <com.discord.views.CheckedSetting
                android:id="@+id/role_settings_voice_speak"
                app:cs_subtext="@string/role_permissions_speak_description"
                app:cs_text="@string/speak"
                style="@style/UiKit.CheckedSetting.Themed"/>
            <com.discord.views.CheckedSetting
                android:id="@+id/role_settings_voice_video"
                app:cs_subtext="@string/role_permissions_stream_description"
                app:cs_text="@string/video"
                style="@style/UiKit.CheckedSetting.Themed"/>
            <com.discord.views.CheckedSetting
                android:id="@+id/role_settings_voice_use_voice_activity"
                app:cs_subtext="@string/role_permissions_use_vad_description"
                app:cs_text="@string/use_vad"
                style="@style/UiKit.CheckedSetting.Themed"/>
            <com.discord.views.CheckedSetting
                android:id="@+id/role_settings_priority_speaker"
                app:cs_subtext="@string/role_permissions_priority_speaker_description"
                app:cs_text="@string/priority_speaker"
                style="@style/UiKit.CheckedSetting.Themed"/>
            <com.discord.views.CheckedSetting
                android:id="@+id/role_settings_voice_mute_members"
                app:cs_subtext="@string/role_permissions_mute_members_description"
                app:cs_text="@string/mute_members"
                style="@style/UiKit.CheckedSetting.Themed"/>
            <com.discord.views.CheckedSetting
                android:id="@+id/role_settings_voice_deafen_members"
                app:cs_subtext="@string/role_permissions_deafen_members_description"
                app:cs_text="@string/deafen_members"
                style="@style/UiKit.CheckedSetting.Themed"/>
            <com.discord.views.CheckedSetting
                android:id="@+id/role_settings_voice_move_members"
                app:cs_subtext="@string/role_permissions_move_members_description"
                app:cs_text="@string/move_members"
                style="@style/UiKit.CheckedSetting.Themed"/>
            <View style="@style/UiKit.Settings.Divider"/>
            <TextView
                android:text="@string/role_permissions_section_stage"
                style="@style/UiKit.Settings.Item.Header"/>
            <com.discord.views.CheckedSetting
                android:id="@+id/role_settings_request_to_speak"
                app:cs_subtext="@string/role_permissions_request_to_speak_description"
                app:cs_text="@string/request_to_speak"
                style="@style/UiKit.CheckedSetting.Themed"/>
            <View
                android:id="@+id/event_permissions_divider"
                style="@style/UiKit.Settings.Divider"/>
            <TextView
                android:id="@+id/event_permissions_title"
                android:text="@string/role_permissions_section_guild_events"
                style="@style/UiKit.Settings.Item.Header"/>
            <com.discord.views.CheckedSetting
                android:id="@+id/role_settings_manage_events"
                app:cs_subtext="@string/role_permissions_manage_events_description"
                app:cs_text="@string/manage_events"
                style="@style/UiKit.CheckedSetting.Themed"/>
            <View style="@style/UiKit.Settings.Divider"/>
            <TextView
                android:text="@string/role_permissions_section_advanced"
                style="@style/UiKit.Settings.Item.Header"/>
            <com.discord.views.CheckedSetting
                android:id="@+id/role_settings_administrator"
                app:cs_subtext="@string/role_permissions_administrator_description"
                app:cs_text="@string/administrator"
                style="@style/UiKit.CheckedSetting.Themed"/>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/edit_role_save"
        android:contentDescription="@string/save"
        style="@style/Settings.FloatingActionButton.Save"/>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
