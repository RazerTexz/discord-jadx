<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="@dimen/chipsview_image_size"
    android:paddingStart="0dp"
    android:paddingEnd="12dp">
    <android.widget.ImageView
        android:id="@+id/chip_image"
        android:padding="2dp"
        android:layout_width="@dimen/chipsview_image_size"
        android:layout_height="@dimen/chipsview_image_size"
        android:src="@drawable/drawable_chip_delete"
        android:contentDescription="@string/remove"/>
    <TextView
        android:gravity="center_vertical"
        android:id="@+id/chip_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="2dp"
        android:layout_toEndOf="@+id/chip_image"/>
</RelativeLayout>
