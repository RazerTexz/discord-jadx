<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="?attr/selectableItemBackground"
    android:focusable="true"
    android:clickable="true"
    android:layout_width="match_parent"
    android:layout_height="60dp">
    <View
        android:id="@+id/server_settings_role_item_drag_overlay"
        android:background="@color/black_alpha_05"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <View
        android:id="@+id/server_settings_role_item_divider_targeted"
        android:background="?attr/color_brand"
        android:visibility="invisible"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:layout_alignParentTop="true"/>
    <FrameLayout
        android:gravity="center_vertical"
        android:layout_centerVertical="true"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="16dp"
        style="@style/UiKit.ViewGroup.LinearLayout.Horizontal">
        <ImageView
            android:layout_gravity="start"
            android:id="@+id/server_settings_role_item_lock_indicator"
            android:src="?attr/ic_lock"
            android:contentDescription="@string/help_role_locked"
            android:layout_marginStart="8dp"
            style="@style/UiKit.ImageView"/>
        <com.discord.widgets.roles.RoleIconView
            android:layout_gravity="center_vertical"
            android:id="@+id/server_settings_role_item_role_icon"
            android:layout_width="24sp"
            android:layout_height="24sp"
            android:layout_marginStart="40dp"/>
        <TextView
            android:layout_gravity="center_vertical"
            android:id="@+id/server_settings_role_item_name"
            android:singleLine="true"
            android:layout_marginStart="72dp"
            style="@style/UiKit.TextView.Semibold"/>
    </FrameLayout>
    <View
        android:id="@+id/server_settings_role_item_bottom_divider"
        android:layout_alignParentBottom="true"
        style="@style/UiKit.Settings.Divider"/>
</RelativeLayout>
