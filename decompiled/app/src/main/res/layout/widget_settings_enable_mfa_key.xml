<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center"
    android:layout_gravity="center"
    android:layout_margin="16dp"
    style="@style/UiKit.ViewGroup.Page.LinearLayout">
    <TextView
        android:textSize="24sp"
        android:textColor="?attr/primary_100"
        android:layout_marginBottom="8dp"
        android:text="@string/user_settings_mfa_enable_code_label"
        style="@style/UiKit.TextView"/>
    <TextView
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="24dp"
        android:text="@string/user_settings_mfa_enable_code_body"
        style="@style/UiKit.TextView"/>
    <TextView
        android:textSize="@dimen/uikit_textsize_large"
        android:gravity="center"
        android:id="@+id/enable_mfa_key_code"
        android:background="?attr/chat_embed_bg"
        android:padding="8dp"
        android:layout_width="match_parent"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:foreground="?attr/selectableItemBackground"
        android:drawablePadding="8dp"
        app:drawableRightCompat="?attr/ic_copy"
        app:fontFamily="?attr/font_monospace"
        style="@style/UiKit.TextView.Large"/>
    <TextView
        android:textColor="?attr/color_brand_500"
        android:id="@+id/enable_mfa_key_launch_authy"
        android:background="?attr/selectableItemBackground"
        android:padding="16dp"
        android:visibility="invisible"
        android:layout_marginTop="16dp"
        style="@style/UiKit.TextView.Semibold"/>
    <TextView
        android:textColor="?attr/color_brand_500"
        android:id="@+id/enable_mfa_key_launch_google_auth"
        android:background="?attr/selectableItemBackground"
        android:padding="16dp"
        android:visibility="invisible"
        style="@style/UiKit.TextView.Semibold"/>
</LinearLayout>
