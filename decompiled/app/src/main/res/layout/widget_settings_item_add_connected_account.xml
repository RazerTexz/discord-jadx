<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="?attr/selectableItemBackground"
    android:padding="16dp"
    style="@style/UiKit.ViewGroup.LinearLayout.Horizontal">
    <ImageView
        android:layout_gravity="center_vertical"
        android:id="@+id/add_connected_account_image"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:importantForAccessibility="no"
        android:layout_marginEnd="16dp"
        style="@style/UiKit.ImageView"/>
    <TextView
        android:layout_gravity="center_vertical"
        android:id="@+id/add_connected_account_text"
        style="@style/UiKit.TextView.Large.SingleLine"/>
</LinearLayout>
