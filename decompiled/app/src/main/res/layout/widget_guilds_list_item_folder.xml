<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="?attr/selectableItemBackgroundBorderless"
    style="@style/UiKit.GuildsListItem">
    <FrameLayout
        android:id="@+id/guilds_item_folder_container"
        android:background="@drawable/drawable_squircle_transparent"
        android:layout_width="@dimen/avatar_size_large"
        android:layout_height="@dimen/avatar_size_large"
        android:layout_centerInParent="true">
        <com.discord.views.ServerFolderView
            android:id="@+id/guilds_item_folder"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <View
            android:id="@+id/guilds_item_highlight"
            android:background="@color/white_alpha_20"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </FrameLayout>
    <ImageView
        android:id="@+id/guilds_item_unread"
        android:importantForAccessibility="no"
        style="@style/UiKit.GuildsListUnread"/>
    <View
        android:id="@+id/guilds_item_selected"
        style="@style/UiKit.GuildsListSelected"/>
    <ImageView
        android:id="@+id/guilds_item_voice"
        android:layout_alignTop="@+id/guilds_item_folder_container"
        android:contentDescription="@string/connection_status_voice_connected"
        android:layout_alignEnd="@+id/guilds_item_folder_container"
        style="@style/UiKit.GuildsListVoiceIcon"/>
    <TextView
        android:id="@+id/guilds_item_mentions"
        android:layout_alignBottom="@+id/guilds_item_folder_container"
        android:layout_alignEnd="@+id/guilds_item_folder_container"
        style="@style/UiKit.GuildsListMentions"/>
</RelativeLayout>
