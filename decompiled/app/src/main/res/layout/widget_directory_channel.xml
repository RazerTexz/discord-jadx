<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    style="@style/UiKit.ViewGroup.Page">
    <com.google.android.material.appbar.AppBarLayout
        android:background="?attr/toolbarColor"
        style="@style/AppTheme.AppBarLayout">
        <com.google.android.material.appbar.CollapsingToolbarLayout
            app:layout_scrollFlags="snap|exitUntilCollapsed|scroll"
            style="@style/AppTheme.CollapsingToolbarLayout">
            <com.discord.views.directories.ServerDiscoveryHeader
                android:id="@+id/header"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="?attr/actionBarSize"
                android:layout_marginBottom="48dp"
                app:layout_collapseMode="parallax"/>
            <androidx.appcompat.widget.Toolbar
                android:id="@+id/action_bar_toolbar"
                android:layout_marginBottom="48dp"
                app:contentInsetStartWithNavigation="0dp"
                app:layout_collapseMode="pin"
                app:navigationContentDescription="@string/back"
                style="@style/AppTheme.Toolbar"/>
            <com.google.android.material.tabs.TabLayout
                android:layout_gravity="bottom"
                android:id="@+id/tabs"
                android:background="?attr/colorBackgroundSecondaryAlt"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:tabIndicatorHeight="0dp"
                app:tabMode="scrollable"
                app:tabSelectedTextColor="?attr/colorHeaderPrimary"
                app:tabTextAppearance="@style/UiKit.TextAppearance.Toolbar.Title"
                app:tabTextColor="?attr/colorTextMuted"/>
        </com.google.android.material.appbar.CollapsingToolbarLayout>
    </com.google.android.material.appbar.AppBarLayout>
    <include
        android:id="@+id/widget_directory_channel_empty"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        layout="@layout/widget_directory_channel_empty"/>
    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/view_pager"
        android:paddingBottom="60dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"/>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
