<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" style="@style/UiKit.ViewGroup.Page">
    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/steps_viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/steps_button_container"
        android:layout_below="@+id/steps_close"/>
    <ImageView
        android:id="@+id/steps_close"
        android:layout_marginTop="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="16dp"
        android:foreground="?attr/selectableItemBackgroundBorderless"
        android:src="?attr/ic_close_24dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:contentDescription="@string/close"
        style="@style/UiKit.ImageView"/>
    <com.discord.views.steps.StepsProgressIndicatorView
        android:gravity="center"
        android:id="@+id/steps_progress_indicator"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/steps_close"
        android:layout_alignBottom="@+id/steps_close"
        android:layout_centerHorizontal="true"/>
    <TextView
        android:gravity="center"
        android:id="@+id/steps_title"
        android:paddingTop="16dp"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/steps_close"
        android:layout_alignBottom="@+id/steps_close"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:layout_marginStart="40dp"
        android:layout_toStartOf="@+id/steps_close"
        style="@style/UiKit.TextView.H6"/>
    <LinearLayout
        android:id="@+id/steps_button_container"
        android:visibility="gone"
        android:layout_margin="16dp"
        android:layout_alignParentBottom="true"
        style="@style/UiKit.ViewGroup.LinearLayout">
        <com.discord.views.LoadingButton
            android:id="@+id/steps_done"
            android:paddingLeft="0dp"
            android:paddingRight="0dp"
            android:visibility="gone"
            android:text="@string/done"
            app:lb_progress_color="@color/white"
            style="@style/UiKit.Material.Button"/>
        <com.google.android.material.button.MaterialButton
            android:id="@+id/steps_next"
            android:text="@string/next"
            style="@style/UiKit.Material.Button"/>
        <TextView
            android:gravity="center_horizontal"
            android:layout_gravity="center_horizontal"
            android:id="@+id/steps_cancel"
            android:background="?attr/selectableItemBackground"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:layout_width="match_parent"
            android:layout_marginTop="4dp"
            android:text="@string/cancel"
            style="@style/UiKit.TextView.Large.SingleLine"/>
    </LinearLayout>
</RelativeLayout>
