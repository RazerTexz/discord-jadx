<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" style="@style/UiKit.ViewGroup.RelativeLayout">
    <RelativeLayout
        android:layout_width="304dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:translationZ="8dp">
        <ImageView
            android:layout_width="100dp"
            android:layout_height="130dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/ic_file_large_document"
            android:rotation="-28"
            android:layout_marginEnd="-56dp"
            android:layout_toStartOf="@+id/chat_input_upload_too_large_center_file"/>
        <ImageView
            android:layout_width="100dp"
            android:layout_height="130dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/ic_file_large_video"
            android:rotation="28"
            android:layout_marginStart="-56dp"
            android:layout_toEndOf="@+id/chat_input_upload_too_large_center_file"/>
        <ImageView
            android:id="@+id/chat_input_upload_too_large_center_file"
            android:layout_width="100dp"
            android:layout_height="130dp"
            android:src="@drawable/ic_file_large_code"
            android:layout_centerHorizontal="true"/>
    </RelativeLayout>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        app:cardBackgroundColor="?attr/colorBackgroundPrimary"
        app:cardCornerRadius="8dp">
        <LinearLayout
            android:layout_marginTop="80dp"
            android:layout_marginBottom="8dp"
            style="@style/UiKit.ViewGroup.LinearLayout">
            <TextView
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="8dp"
                android:text="@string/upload_area_too_large_title"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                style="@style/UiKit.TextView.H1.Bold"/>
            <TextView
                android:textColor="?attr/colorHeaderSecondary"
                android:gravity="center"
                android:id="@+id/image_upload_failed_text"
                android:layout_width="match_parent"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                style="@style/UiKit.TextView"/>
            <View
                android:id="@+id/image_upload_failed_divider"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginRight="16dp"
                style="@style/UiKit.Divider"/>
            <Space
                android:layout_width="match_parent"
                android:layout_height="16dp"/>
            <RelativeLayout
                android:id="@+id/image_upload_failed_compression_settings_container"
                android:background="?attr/selectableItemBackground"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:visibility="gone"
                android:layout_marginBottom="16dp"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                style="@style/UiKit.ViewGroup.RelativeLayout">
                <LinearLayout
                    android:layout_centerVertical="true"
                    android:layout_toStartOf="@+id/image_upload_failed_compression_settings_checkbox"
                    android:layout_alignParentStart="true"
                    style="@style/UiKit.ViewGroup.LinearLayout">
                    <TextView
                        android:textColor="?attr/primary_100"
                        android:id="@+id/setting_label"
                        android:text="@string/upload_area_always_compress"
                        style="@style/UiKit.TextView.H2"/>
                    <TextView
                        android:textColor="?attr/colorHeaderSecondary"
                        android:id="@+id/setting_subtext"
                        android:layout_marginTop="4dp"
                        android:text="@string/upload_area_always_compress_desc"
                        style="@style/UiKit.TextView.Subtext"/>
                </LinearLayout>
                <com.google.android.material.switchmaterial.SwitchMaterial
                    android:id="@+id/image_upload_failed_compression_settings_checkbox"
                    android:clickable="false"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:importantForAccessibility="no"
                    android:layout_marginStart="16dp"
                    android:layout_alignParentEnd="true"
                    android:buttonTint="?attr/colorCompoundButton"/>
            </RelativeLayout>
            <com.google.android.material.button.MaterialButton
                android:id="@+id/image_upload_failed_send_compress"
                android:text="@string/send_compressed"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                style="@style/UiKit.Material.Button"/>
            <RelativeLayout
                android:id="@+id/image_upload_failed_nitro_wrapper"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/image_upload_failed_nitro"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    style="@style/UiKit.Material.Button.Green"/>
                <TextView
                    android:textAppearance="@style/UiKit.TextAppearance.Button"
                    android:textColor="@color/primary_100"
                    android:gravity="center"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:clickable="false"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/learn_more_alt"
                    android:drawablePadding="4dp"
                    android:layout_centerInParent="true"
                    android:translationZ="8dp"
                    app:drawableStartCompat="@drawable/ic_nitro_badge_white"
                    style="@style/UiKit.TextView"/>
            </RelativeLayout>
            <com.google.android.material.button.MaterialButton
                android:textColor="?attr/primary_100"
                android:id="@+id/image_upload_failed_cancel"
                android:layout_width="match_parent"
                android:text="@string/cancel"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                style="@style/UiKit.Material.Button.Transparent"/>
            <com.google.android.material.button.MaterialButton
                android:id="@+id/image_upload_failed_okay"
                android:visibility="gone"
                android:text="@string/okay"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                style="@style/UiKit.Material.Button"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>
