<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/black"
    style="@style/UiKit.ViewGroup.Page">
    <me.dm7.barcodescanner.zxing.ZXingScannerView
        android:id="@+id/qr_scanner"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <com.google.android.material.chip.Chip
        android:textAppearance="@style/UiKit.TextAppearance"
        android:textColor="@color/white"
        android:layout_gravity="bottom|center_horizontal"
        android:id="@+id/qr_scanner_chip"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:text="@string/qr_code_in_app_scanner_only"
        app:chipBackgroundColor="?attr/color_brand"/>
    <com.google.android.material.appbar.AppBarLayout
        android:layout_gravity="top"
        style="@style/AppTheme.AppBarLayout.Flat.Transparent">
        <androidx.appcompat.widget.Toolbar
            android:background="@color/primary_900_alpha_80"
            style="@style/AppTheme.Toolbar"/>
    </com.google.android.material.appbar.AppBarLayout>
</FrameLayout>
