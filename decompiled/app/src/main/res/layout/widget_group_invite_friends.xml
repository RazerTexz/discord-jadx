<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" style="@style/UiKit.ViewGroup.CoordinatorLayout.Page">
    <com.google.android.material.appbar.AppBarLayout style="@style/AppTheme.AppBarLayout.Flat">
        <androidx.appcompat.widget.Toolbar style="@style/AppTheme.Toolbar"/>
        <RelativeLayout
            android:id="@+id/group_invite_friends_recipients_container"
            style="@style/UiKit.ViewGroup.RelativeLayout">
            <TextView
                android:textColor="?attr/primary_100"
                android:id="@+id/group_invite_friends_text_to"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:text="@string/group_dm_invite_to"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                style="@style/UiKit.TextView"/>
            <com.discord.chips_view.ChipsView
                android:id="@+id/group_invite_friends_chips"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:overScrollMode="never"
                android:layout_toEndOf="@+id/group_invite_friends_text_to"
                app:cv_bg_color="?attr/primary_630"
                app:cv_bg_color_clicked="?attr/primary_700"
                app:cv_chip_bg_res="@drawable/drawable_chip_background_deprecated"
                app:cv_chip_layout="@layout/view_chip_deprecated"
                app:cv_color="?attr/primary_630"
                app:cv_color_clicked="?attr/primary_700"
                app:cv_icon_delete="@drawable/drawable_chip_delete"
                app:cv_max_height="120dp"
                app:cv_search_text_color="?attr/primary_300"
                app:cv_search_text_size="@dimen/uikit_textsize_medium"
                app:cv_text_color="?attr/primary_300"
                app:cv_text_color_clicked="?attr/primary_300"
                app:cv_vertical_spacing="6dp"/>
            <View
                android:layout_alignParentBottom="true"
                style="@style/UiKit.Divider"/>
        </RelativeLayout>
    </com.google.android.material.appbar.AppBarLayout>
    <com.discord.app.AppViewFlipper
        android:id="@+id/group_invite_friends_view_flipper"
        android:inAnimation="@android:anim/fade_in"
        android:outAnimation="@android:anim/fade_out"
        style="@style/UiKit.ViewGroup.AppViewFlipper.InCoordinatorLayout">
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/group_invite_friends_recycler"
            android:layout_height="match_parent"
            style="@style/UiKit.ViewGroup.RecyclerView"/>
        <TextView
            android:text="@string/group_dm_invite_empty"
            app:drawableTopCompat="@drawable/asset_no_results_light"
            style="@style/UiKit.TextView.NoResults"/>
        <LinearLayout
            android:gravity="center"
            android:layout_gravity="center"
            style="@style/UiKit.ViewGroup.LinearLayout">
            <TextView
                android:text="@string/group_dm_invite_full_main"
                app:drawableTopCompat="@drawable/asset_group_full"
                style="@style/UiKit.TextView.NoResults"/>
            <TextView
                android:gravity="center"
                android:layout_margin="8dp"
                android:text="@string/group_dm_invite_full_sub"
                style="@style/UiKit.TextView.Semibold"/>
        </LinearLayout>
    </com.discord.app.AppViewFlipper>
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/group_invite_friends_save_fab"
        android:src="@drawable/ic_send_white_24dp"
        android:contentDescription="@string/save"
        style="@style/Settings.FloatingActionButton"/>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
