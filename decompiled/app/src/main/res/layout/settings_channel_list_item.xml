<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="?attr/selectableItemBackground"
    android:paddingTop="12dp"
    android:paddingBottom="12dp"
    style="@style/UiKit.ViewGroup.RelativeLayout">
    <View
        android:id="@+id/settings_channel_list_item_selected_overlay"
        android:background="@color/grey_1_alpha_60"
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <ImageView
        android:id="@+id/settings_channel_list_item_hash"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:src="@drawable/ic_channel_text"
        android:layout_centerVertical="true"
        android:contentDescription="@string/text_channel"
        android:layout_marginStart="28dp"
        app:tint="?attr/colorTextNormal"
        style="@style/UiKit.ImageView"/>
    <TextView
        android:id="@+id/settings_channel_list_item_name"
        android:singleLine="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="16dp"
        android:layout_toStartOf="@+id/settings_channel_list_item_drag"
        android:layout_toEndOf="@+id/settings_channel_list_item_hash"
        style="@style/UiKit.TextView"/>
    <ImageView
        android:id="@+id/settings_channel_list_item_drag"
        android:src="?attr/ic_drag_handle"
        android:layout_centerVertical="true"
        android:importantForAccessibility="no"
        android:layout_marginEnd="16dp"
        android:layout_alignParentEnd="true"
        style="@style/UiKit.ImageView"/>
</RelativeLayout>
