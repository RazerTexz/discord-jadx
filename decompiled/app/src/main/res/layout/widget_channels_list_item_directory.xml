<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center_vertical"
    android:background="@drawable/ic_directory_selector_background"
    android:padding="8dp"
    android:layout_marginBottom="4dp"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp"
    style="@style/UiKit.ViewGroup.LinearLayout.Horizontal">
    <ImageView
        android:id="@+id/directory_channel_icon"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/ic_compass"
        android:importantForAccessibility="no"
        android:layout_marginEnd="8dp"
        android:backgroundTint="?attr/primary_700"
        app:tint="@color/channel_item_hub_selector"
        style="@style/Avatar.Small"/>
    <TextView
        android:textColor="@color/channel_item_hub_selector"
        android:id="@+id/directory_channel_name"
        android:layout_width="0dp"
        android:singleLine="true"
        android:layout_weight="1"
        style="@style/UiKit.TextView.Large"/>
    <TextView
        android:id="@+id/directory_channel_unread_count"
        android:background="@drawable/drawable_circle_red"
        android:visibility="gone"
        android:layout_marginStart="8dp"
        style="@style/Icon.Mentions"/>
</LinearLayout>
