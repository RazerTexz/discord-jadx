<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="?attr/colorBackgroundSecondary"
    android:visibility="gone"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:gravity="center"
        android:id="@+id/message_count_container"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/separator_one"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <TextView
            android:textSize="@dimen/uikit_textsize_medium"
            android:textColor="?attr/primary_300"
            android:ellipsize="end"
            android:id="@+id/message_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="4dp"
            android:textAlignment="center"
            app:drawableStartCompat="@drawable/ic_chat_message_16dp"/>
    </LinearLayout>
    <View
        android:id="@+id/separator_one"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/reaction"
        app:layout_constraintStart_toEndOf="@+id/message_count_container"
        app:layout_constraintTop_toTopOf="parent"
        style="@style/Forums.SeparatorView"/>
    <com.discord.views.ReactionView
        android:gravity="center"
        android:id="@+id/reaction"
        android:background="@drawable/bg_pressed_highlight"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/separator_two"
        app:layout_constraintStart_toEndOf="@+id/separator_one"
        app:layout_constraintTop_toTopOf="parent"
        app:rv_textColor="?attr/colorHeaderSecondary"/>
    <View
        android:id="@+id/separator_two"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/following_container"
        app:layout_constraintStart_toEndOf="@+id/reaction"
        app:layout_constraintTop_toTopOf="parent"
        style="@style/Forums.SeparatorView"/>
    <LinearLayout
        android:gravity="center"
        android:id="@+id/following_container"
        android:background="@drawable/bg_pressed_highlight"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:drawableStartCompat="@drawable/ic_bell_16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/separator_two"
        app:layout_constraintTop_toTopOf="parent">
        <TextView
            android:textSize="@dimen/uikit_textsize_medium"
            android:textColor="?attr/primary_300"
            android:id="@+id/following"
            android:layout_width="wrap_content"
            android:text="@string/follow"
            android:drawablePadding="4dp"
            android:textAlignment="center"
            app:drawableStartCompat="@drawable/ic_bell_16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/separator_two"
            app:layout_constraintTop_toTopOf="parent"
            style="@style/UiKit.TextView"/>
        <ProgressBar
            android:id="@+id/follow_loading_indicator"
            android:visibility="gone"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:indeterminate="true"
            android:indeterminateTint="?attr/theme_chat_loading_spinner_color"
            android:indeterminateTintMode="src_in"
            style="@style/Widget.AppCompat.ProgressBar"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
