<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="?attr/colorBackgroundSecondary"
    android:paddingLeft="16dp"
    android:paddingTop="4dp"
    android:paddingRight="16dp"
    android:paddingBottom="4dp"
    android:layout_height="44dp"
    style="@style/UiKit.ViewGroup.ConstraintLayout">
    <View
        android:id="@+id/name_placeholder"
        android:background="@drawable/drawable_empty_text_placeholder_white"
        android:layout_width="0dp"
        android:layout_height="10dp"
        android:layout_marginBottom="2dp"
        android:backgroundTint="?attr/colorBackgroundAccent"
        app:layout_constraintBottom_toTopOf="@+id/description_placeholder"
        app:layout_constraintEnd_toEndOf="@+id/name_placeholder_end_guideline"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <androidx.constraintlayout.widget.Guideline
        android:orientation="vertical"
        android:id="@+id/name_placeholder_end_guideline"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintGuide_percent="0.3"/>
    <View
        android:id="@+id/description_placeholder"
        android:background="@drawable/drawable_empty_text_placeholder_white"
        android:layout_width="0dp"
        android:layout_height="10dp"
        android:alpha="0.5"
        android:backgroundTint="?attr/colorBackgroundAccent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/description_placeholder_end_guideline"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/name_placeholder"/>
    <androidx.constraintlayout.widget.Guideline
        android:orientation="vertical"
        android:id="@+id/description_placeholder_end_guideline"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintGuide_percent="0.5"/>
    <View
        android:id="@+id/application_name_placeholder"
        android:background="@drawable/drawable_empty_text_placeholder_white"
        android:layout_width="0dp"
        android:layout_height="10dp"
        android:backgroundTint="?attr/colorBackgroundAccent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/application_name_start_guideline"
        app:layout_constraintTop_toTopOf="parent"/>
    <androidx.constraintlayout.widget.Guideline
        android:orientation="vertical"
        android:id="@+id/application_name_start_guideline"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintGuide_percent="0.8"/>
</androidx.constraintlayout.widget.ConstraintLayout>
