<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <ImageView
        android:background="@drawable/drawable_discovery_card_icon_bg_circle"
        android:padding="4dp"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/ic_mic_grey_24dp"
        android:layout_marginEnd="8dp"
        app:tint="?attr/colorInteractiveNormal"/>
    <TextView
        android:id="@+id/other_speakers_count_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/UiKit.TextView.Medium.SingleLine"/>
</LinearLayout>
