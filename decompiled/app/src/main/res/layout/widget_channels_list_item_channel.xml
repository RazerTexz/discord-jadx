<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingTop="8dp"
    android:paddingBottom="8dp"
    android:layout_marginBottom="4dp"
    style="@style/UiKit.ViewGroup.RelativeLayout">
    <ImageView
        android:id="@+id/channels_item_channel_unread"
        android:src="@drawable/ic_unread_white_9dp"
        android:layout_centerVertical="true"
        android:importantForAccessibility="no"
        app:tint="?attr/colorInteractiveActive"
        style="@style/UiKit.ImageView"/>
    <ImageView
        android:id="@+id/channels_item_channel_hash"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/ic_channel_text"
        android:layout_centerVertical="true"
        android:importantForAccessibility="no"
        android:layout_marginStart="16dp"
        app:tint="?attr/colorTextNormal"
        style="@style/UiKit.ImageView"/>
    <TextView
        android:textSize="@dimen/uikit_textsize_large"
        android:textColor="?attr/colorTextNormal"
        android:id="@+id/channels_item_channel_name"
        android:singleLine="true"
        android:layout_centerVertical="true"
        android:layout_alignWithParentIfMissing="true"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="16dp"
        android:layout_toStartOf="@+id/channels_item_channel_guild_role_subscription_icon"
        android:layout_toEndOf="@+id/channels_item_channel_hash"
        style="@style/UiKit.TextView"/>
    <ImageView
        android:id="@+id/channels_item_channel_guild_role_subscription_icon"
        android:visibility="gone"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/ic_premium_channel_locked"
        android:layout_centerVertical="true"
        android:layout_alignWithParentIfMissing="true"
        android:importantForAccessibility="no"
        android:layout_marginEnd="16dp"
        android:layout_toStartOf="@+id/channels_item_channel_mentions"
        style="@style/UiKit.ImageView"/>
    <TextView
        android:id="@+id/channels_item_channel_mentions"
        android:background="?attr/drawable_overlay_mentions"
        android:visibility="gone"
        android:minWidth="16dp"
        android:layout_centerVertical="true"
        android:layout_marginEnd="16dp"
        android:layout_alignParentEnd="true"
        style="@style/Icon.Mentions.Large"/>
</RelativeLayout>
