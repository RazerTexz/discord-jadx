<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="?attr/colorBackgroundPrimary"
    android:padding="16dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <com.discord.views.GuildView
        android:id="@+id/image"
        android:importantForAccessibility="no"
        android:layout_marginEnd="4dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        style="@style/Avatar.Small"/>
    <TextView
        android:textSize="@dimen/uikit_textsize_medium"
        android:id="@+id/kicker"
        android:layout_width="0dp"
        android:layout_height="18dp"
        android:layout_marginStart="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/image"
        app:layout_constraintTop_toTopOf="parent"
        style="@style/UiKit.TextView.Medium.SingleLine"/>
    <com.discord.utilities.view.text.LinkifiedTextView
        android:textSize="@dimen/uikit_textsize_medium"
        android:id="@+id/text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/image"
        style="@style/UiKit.TextView.Bold"/>
</androidx.constraintlayout.widget.ConstraintLayout>
