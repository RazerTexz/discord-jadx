<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/widget_tabs_host_container"
    android:background="?attr/colorBackgroundTertiary"
    style="@style/UiKit.ViewGroup.Page">
    <androidx.fragment.app.FragmentContainerView
        android:name="com.discord.widgets.status.WidgetGlobalStatusIndicator"
        android:id="@+id/widget_tabs_host_global_status_indicator"
        app:layout_constraintBottom_toTopOf="@+id/widget_tabs_host_nav_host"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        style="@style/UiKit.ViewGroup"/>
    <FrameLayout
        android:id="@+id/widget_tabs_host_nav_host"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/widget_tabs_host_global_status_indicator">
        <androidx.fragment.app.FragmentContainerView
            android:name="com.discord.widgets.home.WidgetHome"
            android:id="@+id/widget_tabs_host_home"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <FrameLayout
            android:id="@+id/widget_tabs_host_non_fullscreen_nav_host"
            android:fitsSystemWindows="true"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <androidx.fragment.app.FragmentContainerView
                android:name="com.discord.widgets.friends.WidgetFriendsList"
                android:id="@+id/widget_tabs_host_friends"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
            <androidx.fragment.app.FragmentContainerView
                android:name="com.discord.widgets.user.WidgetUserMentions"
                android:id="@+id/widget_tabs_host_mentions"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
            <androidx.fragment.app.FragmentContainerView
                android:name="com.discord.widgets.settings.WidgetSettings"
                android:id="@+id/widget_tabs_host_user_settings"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </FrameLayout>
    </FrameLayout>
    <com.discord.widgets.tabs.TabsHostBottomNavigationView
        android:id="@+id/widget_tabs_host_bottom_navigation_view"
        android:background="?attr/colorTabsBackground"
        android:visibility="invisible"
        android:fitsSystemWindows="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>
