<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root"
    android:background="?attr/colorBackgroundSecondary"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_height="match_parent"
        style="@style/UiKit.ViewGroup.CoordinatorLayout.Page">
        <com.discord.app.AppViewFlipper
            android:id="@+id/suggestions_flipper"
            style="@style/UiKit.ViewGroup.AppViewFlipper.InCoordinatorLayout">
            <androidx.core.widget.NestedScrollView
                android:id="@+id/empty_state_scroller"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:padding="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/UiKit.ViewGroup.ConstraintLayout">
                    <ImageView
                        android:layout_gravity="center"
                        android:id="@+id/empty_state_img"
                        android:layout_marginTop="16dp"
                        android:src="@drawable/drawable_invite_share_art_envelope"
                        android:scaleType="centerInside"
                        android:importantForAccessibility="no"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        style="@style/UiKit.ImageView"/>
                    <TextView
                        android:textAppearance="@style/UiKit.TextAppearance.Bold"
                        android:textSize="@dimen/uikit_textsize_xxlarge"
                        android:textColor="?attr/colorHeaderPrimary"
                        android:id="@+id/empty_state_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:text="@string/invite_empty_title"
                        android:textAlignment="center"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/empty_state_img"
                        style="@style/UiKit.TextView"/>
                    <TextView
                        android:textSize="@dimen/uikit_textsize_large"
                        android:textColor="?attr/colorHeaderSecondary"
                        android:id="@+id/empty_state_body"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="@string/invite_empty_body"
                        android:textAlignment="center"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/empty_state_title"
                        style="@style/UiKit.TextView"/>
                    <TextView
                        android:textSize="@dimen/uikit_textsize_large"
                        android:textColor="?attr/colorHeaderPrimary"
                        android:ellipsize="start"
                        android:gravity="center_vertical"
                        android:id="@+id/empty_state_invite_link"
                        android:background="?attr/bg_clickable_rounded_4dp"
                        android:paddingLeft="16dp"
                        android:paddingRight="16dp"
                        android:focusable="true"
                        android:clickable="true"
                        android:layout_width="0dp"
                        android:layout_height="56dp"
                        android:layout_marginTop="16dp"
                        android:text="@string/invite_link_example_verified"
                        android:layout_marginEnd="8dp"
                        android:backgroundTint="?attr/colorBackgroundTertiary"
                        app:layout_constraintEnd_toStartOf="@+id/empty_state_link_options"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/empty_state_body"
                        style="@style/UiKit.TextView.SingleLine"/>
                    <ImageButton
                        android:id="@+id/empty_state_link_options"
                        android:background="?attr/bg_clickable_rounded_4dp"
                        android:padding="16dp"
                        android:layout_width="56dp"
                        android:layout_height="56dp"
                        android:src="?attr/ic_settings"
                        android:contentDescription="@string/link_settings"
                        android:backgroundTint="?attr/colorBackgroundTertiary"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/empty_state_invite_link"/>
                    <TextView
                        android:textSize="@dimen/uikit_textsize_small"
                        android:textColor="?attr/colorHeaderSecondary"
                        android:id="@+id/empty_state_settings_subtext"
                        android:layout_marginTop="8dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/empty_state_invite_link"
                        style="@style/UiKit.TextView.Subtext"/>
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/empty_state_share_btn"
                        android:layout_marginTop="16dp"
                        android:text="@string/share_link"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/empty_state_settings_subtext"
                        style="@style/UiKit.Material.Button"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.core.widget.NestedScrollView>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                style="@style/UiKit.ViewGroup.ConstraintLayout">
                <com.discord.views.SearchInputView
                    android:id="@+id/search_input"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="8dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="8dp"
                    app:layout_constraintBottom_toTopOf="@+id/search_barrier"
                    app:layout_constraintEnd_toStartOf="@+id/share_button"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:siv_search_content_description="@string/invite_search_for_friends"/>
                <androidx.cardview.widget.CardView
                    android:id="@+id/share_button"
                    android:layout_width="40dp"
                    android:layout_height="0dp"
                    android:foreground="?attr/bg_pressed_highlight"
                    android:layout_marginEnd="16dp"
                    app:cardBackgroundColor="?attr/colorBackgroundTertiary"
                    app:cardCornerRadius="4dp"
                    app:cardElevation="0dp"
                    app:layout_constraintBottom_toBottomOf="@+id/search_input"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/search_input"
                    app:strokeWidth="0dp">
                    <ImageView
                        android:layout_gravity="center"
                        android:src="@drawable/ic_share_white_24dp"
                        app:tint="?attr/colorInteractiveNormal"
                        style="@style/UiKit.ImageView"/>
                </androidx.cardview.widget.CardView>
                <androidx.constraintlayout.widget.Barrier
                    android:id="@+id/search_barrier"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    app:barrierDirection="bottom"
                    app:constraint_referenced_ids="search_input,share_button"/>
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/copy_link_group"
                    android:background="?attr/bg_pressed_highlight"
                    android:padding="8dp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="16dp"
                    android:layout_marginStart="8dp"
                    app:layout_constraintBottom_toTopOf="@+id/link_settings_barrier"
                    app:layout_constraintEnd_toStartOf="@+id/invite_settings_button"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/search_barrier"
                    style="@style/UiKit.ViewGroup.ConstraintLayout">
                    <FrameLayout
                        android:id="@+id/copy_link_icon"
                        android:background="@drawable/drawable_circle_black"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:layout_marginEnd="16dp"
                        app:backgroundTint="?attr/colorBackgroundTertiary"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@+id/copy_link_icon_barrier"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">
                        <ImageView
                            android:layout_gravity="center"
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:src="@drawable/ic_diag_link_24dp"
                            android:contentDescription="@string/copy_link"
                            app:tint="?attr/colorInteractiveNormal"
                            style="@style/UiKit.ImageView"/>
                    </FrameLayout>
                    <androidx.constraintlayout.widget.Barrier
                        android:id="@+id/copy_link_icon_barrier"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        app:barrierDirection="end"
                        app:constraint_referenced_ids="copy_link_icon"/>
                    <TextView
                        android:textAppearance="@style/UiKit.TextAppearance.Semibold"
                        android:textSize="@dimen/uikit_textsize_large"
                        android:textColor="?attr/colorInteractiveActive"
                        android:id="@+id/copy_link_title"
                        android:layout_width="0dp"
                        android:text="@string/invite_copy_invite_link_header_mobile"
                        app:layout_constraintBottom_toTopOf="@+id/copy_link_subtitle"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/copy_link_icon_barrier"
                        app:layout_constraintTop_toTopOf="parent"
                        style="@style/UiKit.TextView"/>
                    <TextView
                        android:textAppearance="@style/UiKit.TextAppearance"
                        android:textSize="@dimen/uikit_textsize_small"
                        android:textColor="?attr/colorTextMuted"
                        android:id="@+id/copy_link_subtitle"
                        android:layout_width="0dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/copy_link_icon_barrier"
                        app:layout_constraintTop_toBottomOf="@+id/copy_link_title"
                        style="@style/UiKit.TextView"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
                <FrameLayout
                    android:id="@+id/invite_settings_button"
                    android:background="?attr/bg_pressed_highlight"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginEnd="16dp"
                    app:layout_constraintBottom_toTopOf="@+id/link_settings_barrier"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/copy_link_group"
                    app:layout_constraintTop_toBottomOf="@+id/search_barrier">
                    <ImageView
                        android:layout_gravity="center"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_settings_24dp"
                        android:contentDescription="@string/link_settings"
                        app:tint="?attr/colorInteractiveNormal"
                        style="@style/UiKit.ImageView"/>
                </FrameLayout>
                <androidx.constraintlayout.widget.Barrier
                    android:id="@+id/link_settings_barrier"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    app:barrierDirection="bottom"
                    app:constraint_referenced_ids="copy_link_group,invite_settings_button"/>
                <TextView
                    android:textAppearance="@style/UiKit.TextAppearance.Bold"
                    android:textSize="@dimen/uikit_textsize_small"
                    android:id="@+id/invite_suggestions_header"
                    android:layout_marginBottom="8dp"
                    android:text="@string/invite_your_friends_header_mobile"
                    android:textAllCaps="true"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    app:layout_constraintBottom_toTopOf="@+id/suggestion_list"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/link_settings_barrier"
                    app:layout_constraintVertical_bias="0"
                    style="@style/UiKit.TextView"/>
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/suggestion_list"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:paddingBottom="16dp"
                    android:layout_height="0dp"
                    app:layout_behavior="@string/appbar_scrolling_view_behavior"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/invite_suggestions_header"
                    style="@style/UiKit.ViewGroup.RecyclerView"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </com.discord.app.AppViewFlipper>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</FrameLayout>
