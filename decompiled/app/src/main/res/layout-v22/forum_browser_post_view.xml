<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/never_seen_before"
        android:src="@drawable/ic_unread_white_9dp"
        android:layout_centerVertical="true"
        android:importantForAccessibility="no"
        android:layout_alignParentStart="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="?attr/colorInteractiveActive"
        style="@style/UiKit.ImageView"/>
    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/forum_post_owner_avatar"
        android:importantForAccessibility="no"
        android:layout_marginStart="12dp"
        app:layout_constraintBottom_toTopOf="@+id/header_barrier"
        app:layout_constraintEnd_toStartOf="@+id/forum_post_owner_name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:roundAsCircle="true"
        style="@style/Avatar.ProfileSmall"/>
    <TextView
        android:textAppearance="@style/UiKit.TextView.Medium.SingleLine"
        android:textColor="?attr/colorInteractiveNormal"
        android:id="@+id/forum_post_owner_name"
        android:paddingTop="2dp"
        android:paddingBottom="2dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="?attr/font_primary_normal"
        android:layout_marginStart="8dp"
        android:paddingVertical="2dp"
        app:layout_constrainedWidth="true"
        app:layout_constraintBottom_toTopOf="@+id/header_barrier"
        app:layout_constraintEnd_toStartOf="@+id/pinned_icon"
        app:layout_constraintStart_toEndOf="@+id/forum_post_owner_avatar"
        app:layout_constraintTop_toTopOf="parent"
        style="@style/UiKit.TextView.SingleLine"/>
    <ImageView
        android:id="@+id/pinned_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_pin_24dp"
        android:contentDescription="@string/pinned_post"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toTopOf="@+id/header_barrier"
        app:layout_constraintEnd_toStartOf="@+id/forum_post_tag"
        app:layout_constraintStart_toEndOf="@+id/forum_post_owner_name"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="@color/brand"/>
    <com.discord.widgets.forums.ForumPostTagView
        android:id="@+id/forum_post_tag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toTopOf="@+id/header_barrier"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/pinned_icon"
        app:layout_constraintTop_toTopOf="parent"/>
    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/header_barrier"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:barrierDirection="bottom"
        app:constraint_referenced_ids="forum_post_owner_avatar,forum_post_owner_name"/>
    <TextView
        android:textAppearance="@style/UiKit.TextView.Semibold"
        android:textSize="18sp"
        android:textColor="?attr/colorHeaderPrimary"
        android:id="@+id/form_post_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:fontFamily="?attr/font_display_semibold"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="16dp"
        android:lineHeight="24dp"
        app:layout_constraintBottom_toTopOf="@+id/forum_post_desc_text"
        app:layout_constraintEnd_toStartOf="@+id/inline_media_image_preview"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/header_barrier"
        app:layout_constraintVertical_bias="0"
        app:layout_constraintVertical_chainStyle="packed"/>
    <com.discord.utilities.view.text.SimpleDraweeSpanTextView
        android:textAppearance="@style/UiKit.TextView.Semibold"
        android:textSize="@dimen/uikit_textsize_medium"
        android:textColor="?attr/colorHeaderSecondary"
        android:ellipsize="end"
        android:id="@+id/forum_post_desc_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="12dp"
        android:maxLines="2"
        android:fontFamily="?attr/font_primary_normal"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="16dp"
        app:layout_constrainedWidth="true"
        app:layout_constraintBottom_toTopOf="@+id/footer_barrier"
        app:layout_constraintEnd_toStartOf="@+id/inline_media_image_preview"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/form_post_title"/>
    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/inline_media_image_preview"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_marginBottom="12dp"
        app:layout_constraintBottom_toTopOf="@+id/footer_barrier"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/form_post_title"
        app:layout_constraintTop_toTopOf="@+id/form_post_title"
        app:overlayImage="@drawable/drawable_overlay_image_square"
        app:placeholderImage="?attr/placeholder_emptyVisibility"
        app:roundedCornerRadius="8dp"
        style="@style/UiKit.ImageView"/>
    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/footer_barrier"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:barrierDirection="bottom"
        app:constraint_referenced_ids="forum_post_desc_text,inline_media_image_preview"/>
    <com.discord.views.ReactionView
        android:id="@+id/reaction"
        android:background="@drawable/drawable_forum_post_footer_item_bg"
        android:paddingLeft="8dp"
        android:paddingTop="4dp"
        android:paddingRight="8dp"
        android:paddingBottom="4dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:paddingHorizontal="8dp"
        android:paddingVertical="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/message_count_container"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/footer_barrier"
        app:rv_meTextColor="@color/status_red_500"
        app:rv_textColor="?attr/colorHeaderSecondary"/>
    <LinearLayout
        android:id="@+id/message_count_container"
        android:background="@drawable/drawable_forum_post_footer_item_bg"
        android:paddingLeft="8dp"
        android:paddingTop="4dp"
        android:paddingRight="8dp"
        android:paddingBottom="4dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:paddingHorizontal="8dp"
        android:paddingVertical="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/timestamp"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toEndOf="@+id/reaction"
        app:layout_constraintTop_toBottomOf="@+id/footer_barrier">
        <TextView
            android:id="@+id/message_count"
            android:drawablePadding="4dp"
            app:drawableStartCompat="@drawable/ic_chat_message_16dp"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintHorizontal_chainStyle="packed"
            style="@style/Forums.PostFooterText.Semibold"/>
        <TextView
            android:textColor="?attr/colorTextBrand"
            android:id="@+id/unread_message_count"
            android:drawablePadding="4dp"
            android:layout_marginStart="8dp"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintHorizontal_chainStyle="packed"
            style="@style/Forums.PostFooterText.Semibold"/>
    </LinearLayout>
    <TextView
        android:id="@+id/timestamp"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/typing_user_summary"
        app:layout_constraintStart_toEndOf="@+id/message_count_container"
        app:layout_constraintTop_toBottomOf="@+id/footer_barrier"
        style="@style/Forums.PostFooterText"/>
    <com.discord.views.user.UserSummaryView
        android:id="@+id/typing_user_summary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/typing_indicator"
        app:layout_constraintStart_toEndOf="@+id/timestamp"
        app:layout_constraintTop_toBottomOf="@+id/footer_barrier"
        app:summary_avatarOverlap="4dp"
        app:summary_avatarSize="16dp"
        app:summary_maxAvatars="3"/>
    <com.discord.views.typing.TypingDots
        android:id="@+id/typing_indicator"
        android:background="@drawable/drawable_forum_post_typing_dots_bg"
        android:paddingLeft="4dp"
        android:paddingTop="4dp"
        android:paddingRight="4dp"
        android:paddingBottom="4dp"
        android:layout_width="24dp"
        android:layout_height="wrap_content"
        android:paddingHorizontal="4dp"
        android:paddingVertical="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/typing_user_summary"
        app:layout_constraintTop_toBottomOf="@+id/footer_barrier"/>
</merge>
