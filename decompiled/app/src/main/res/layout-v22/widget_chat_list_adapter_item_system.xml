<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingTop="@dimen/chat_cell_vertical_spacing_padding"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="0dp"
    android:paddingEnd="@dimen/chat_cell_horizontal_spacing_padding"
    android:layout_marginEnd="@dimen/chat_cell_horizontal_spacing_margin">
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/uikit_chat_guideline"
        style="@style/UiKit.Chat.Guideline"/>
    <ImageView
        android:id="@+id/system_icon"
        android:layout_width="@dimen/avatar_size_small"
        android:layout_height="@dimen/avatar_size_small"
        android:layout_marginTop="3dp"
        android:importantForAccessibility="no"
        android:layout_marginStart="18dp"
        android:layout_marginEnd="@dimen/chat_cell_horizontal_spacing_total"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <ImageView
        android:id="@+id/system_icon_automod"
        android:visibility="gone"
        android:layout_width="@dimen/avatar_size_chat"
        android:layout_height="@dimen/avatar_size_chat"
        android:layout_marginTop="3dp"
        android:src="@drawable/ic_profile_automod_robot_sweeping_40dp"
        android:contentDescription="@string/guild_automod_system_message_avatar_content_description"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="@dimen/chat_cell_horizontal_spacing_total"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/chat_cell_vertical_spacing_padding"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/uikit_chat_guideline"
        app:layout_constraintTop_toTopOf="parent">
        <com.discord.utilities.view.text.LinkifiedTextView
            android:textColor="?attr/colorTextNormal"
            android:id="@+id/system_text"
            android:layout_width="match_parent"
            android:lineSpacingMultiplier="1"
            style="@style/UiKit.TextView.Large"/>
        <TextView
            android:textSize="@dimen/uikit_textsize_small"
            android:textColor="?attr/colorTextMuted"
            android:gravity="center_vertical"
            android:id="@+id/system_timestamp"
            android:layout_marginBottom="1dp"
            android:maxWidth="150dp"
            android:text="@string/sample_time_pm"
            android:singleLine="true"
            style="@style/UiKit.TextView"/>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/role_subscription_purchase_welcome_card"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <FrameLayout
                android:background="@drawable/bg_role_subscription_purchase"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/role_subscription_purchase_lanyard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/asset_role_subscription_purchase_lanyard"
                app:layout_constraintEnd_toStartOf="@+id/role_subscription_badge_dummy_view"
                app:layout_constraintTop_toTopOf="parent"/>
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/role_subscription_purchase_badge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:src="@drawable/asset_role_subscription_purchase_badge"
                android:layout_marginStart="25dp"
                app:layout_constraintEnd_toStartOf="@+id/role_subscription_purchaser_username"
                app:layout_constraintHorizontal_chainStyle="packed"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>
            <View
                android:id="@+id/role_subscription_badge_dummy_view"
                android:layout_width="1dp"
                android:layout_height="1dp"
                android:layout_marginStart="15dp"
                app:layout_constraintEnd_toEndOf="@+id/role_subscription_purchase_badge"
                app:layout_constraintStart_toStartOf="@+id/role_subscription_purchase_badge"
                app:layout_constraintTop_toTopOf="parent"/>
            <TextView
                android:id="@+id/role_subscription_purchase_welcome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/role_subscription_welcome_label"
                android:layout_marginEnd="25dp"
                app:layout_constraintBottom_toTopOf="@+id/role_subscription_purchaser_username"
                app:layout_constraintStart_toStartOf="@+id/role_subscription_purchaser_username"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_chainStyle="packed"
                style="@style/UiKit.TextView.Large"/>
            <TextView
                android:ellipsize="end"
                android:id="@+id/role_subscription_purchaser_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:singleLine="true"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="25dp"
                app:layout_constrainedWidth="true"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/role_subscription_purchase_badge"
                app:layout_constraintTop_toBottomOf="@+id/role_subscription_purchase_welcome"
                style="@style/UiKit.TextView.H1.Bold"/>
            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/role_subscription_purchaser_avatar"
                android:importantForAccessibility="no"
                app:layout_constrainedWidth="true"
                app:layout_constraintBottom_toBottomOf="@+id/role_subscription_purchase_badge"
                app:layout_constraintEnd_toEndOf="@+id/role_subscription_purchase_badge"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintStart_toStartOf="@+id/role_subscription_purchase_badge"
                app:layout_constraintTop_toTopOf="@+id/role_subscription_purchase_badge"
                style="@style/Avatar.Standard"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <LinearLayout
            android:gravity="center"
            android:orientation="horizontal"
            android:id="@+id/system_welcome_cta_button"
            android:background="@drawable/system_cta_bg"
            android:paddingLeft="12dp"
            android:paddingTop="4dp"
            android:paddingRight="12dp"
            android:paddingBottom="4dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:foreground="?attr/selectableItemBackgroundBorderless"
            android:paddingHorizontal="12dp"
            android:paddingVertical="4dp">
            <com.discord.views.sticker.StickerView
                android:id="@+id/system_welcome_cta_button_sticker"
                android:layout_width="32dp"
                android:layout_height="32dp"/>
            <TextView
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/welcome_cta_label"
                android:layout_marginStart="4dp"
                style="@style/UiKit.TextView.Semibold"/>
        </LinearLayout>
    </LinearLayout>
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/chat_list_adapter_item_thread_embed_spine"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginTop="4dp"
        android:src="@drawable/thread_embed_spine_drawable"
        android:layout_marginStart="@dimen/chat_list_spine_margin"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/system_icon"/>
</androidx.constraintlayout.widget.ConstraintLayout>
