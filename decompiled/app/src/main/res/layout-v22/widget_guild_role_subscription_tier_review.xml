<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/guild_role_subscription_create_tier_confirmation_title"
        style="@style/UiKit.GuildSubscriptionRole.Setup.Title"/>
    <TextView
        android:layout_gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/guild_role_subscription_setup_default_padding"
        android:text="@string/guild_role_subscription_create_tier_confirmation_description"
        style="@style/UiKit.GuildSubscriptionRole.Setup.Subtitle"/>
    <View
        android:layout_marginTop="24dp"
        style="@style/UiKit.GuildSubscriptionRole.Setup.Divider"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/subscription_tier_review_recycler"
        android:background="@drawable/drawable_rect_rounded_bg_secondary"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/guild_role_subscription_setup_default_padding"
        android:layout_marginTop="24dp"
        android:layout_marginRight="@dimen/guild_role_subscription_setup_default_padding"
        android:layout_marginHorizontal="@dimen/guild_role_subscription_setup_default_padding"/>
</LinearLayout>
