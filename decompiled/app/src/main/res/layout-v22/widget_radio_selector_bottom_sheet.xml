<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="?attr/colorBackgroundSecondary"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    style="@style/UiKit.ViewGroup.Page.LinearLayout">
    <TextView
        android:id="@+id/radio_selector_bottom_sheet_title"
        android:background="?attr/colorBackgroundTertiary"
        android:paddingLeft="16dp"
        android:paddingTop="18dp"
        android:paddingRight="16dp"
        android:paddingBottom="18dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/category"
        android:paddingHorizontal="16dp"
        android:paddingVertical="18dp"
        style="@style/UiKit.TextView.H2"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view"
        android:background="@drawable/rounded_rectangle_4dp_radius"
        android:clipChildren="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:backgroundTint="?attr/colorBackgroundPrimary"
        style="@style/UiKit.ViewGroup.RecyclerView"/>
</LinearLayout>
