<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:background="@drawable/drawable_rect_rounded_bg_secondary"
    android:padding="@dimen/guild_role_subscription_setup_default_padding"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/guild_role_subscription_tier_icon"
        android:background="?attr/primary_700_circle"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:actualImageScaleType="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:textColor="?attr/colorHeaderPrimary"
        android:id="@+id/guild_role_subscription_tier_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/guild_role_subscription_setup_default_padding"
        android:layout_marginRight="@dimen/guild_role_subscription_setup_default_padding"
        android:drawablePadding="4dp"
        android:layout_marginHorizontal="@dimen/guild_role_subscription_setup_default_padding"
        app:layout_constraintBottom_toTopOf="@+id/guild_role_subscription_tier_price"
        app:layout_constraintEnd_toStartOf="@+id/guild_role_subscription_tier_edit"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toEndOf="@+id/guild_role_subscription_tier_icon"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0"
        style="@style/UiKit.TextView.H2"/>
    <TextView
        android:textColor="?attr/colorInteractiveNormal"
        android:id="@+id/guild_role_subscription_tier_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="8dp"
        app:layout_constrainedWidth="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/guild_role_subscription_tier_draft_tag"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="@+id/guild_role_subscription_tier_name"
        app:layout_constraintTop_toBottomOf="@+id/guild_role_subscription_tier_name"
        style="@style/UiKit.TextView.Medium"/>
    <TextView
        android:textSize="@dimen/uikit_textsize_small"
        android:textColor="@color/primary_light_900"
        android:id="@+id/guild_role_subscription_tier_draft_tag"
        android:background="@drawable/drawable_pill_background_tertiary"
        android:paddingLeft="4dp"
        android:paddingRight="4dp"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/guild_role_subscription_tier_management_draft_label"
        android:textAllCaps="true"
        android:layout_marginEnd="@dimen/guild_role_subscription_setup_default_padding"
        android:backgroundTint="?attr/colorInfoWarningForeground"
        android:paddingHorizontal="4dp"
        app:layout_constraintBottom_toBottomOf="@+id/guild_role_subscription_tier_price"
        app:layout_constraintEnd_toStartOf="@+id/guild_role_subscription_tier_edit"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toEndOf="@+id/guild_role_subscription_tier_price"
        app:layout_constraintTop_toTopOf="@+id/guild_role_subscription_tier_price"
        style="@style/UiKit.TextView.Bold"/>
    <ImageView
        android:id="@+id/guild_role_subscription_tier_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_edit_24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>
