<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingLeft="16dp"
    android:paddingTop="12dp"
    android:paddingRight="16dp"
    android:paddingBottom="12dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingHorizontal="16dp"
    android:paddingVertical="12dp">
    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/stage_raised_hands_item_user_avatar"
        android:layout_width="@dimen/avatar_size_raised_hands"
        android:layout_height="@dimen/avatar_size_raised_hands"
        app:actualImageScaleType="fitCenter"
        app:fadeDuration="0"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:roundAsCircle="true"/>
    <TextView
        android:id="@+id/stage_raised_hands_item_user_name"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginHorizontal="16dp"
        app:layout_constrainedWidth="true"
        app:layout_constraintBottom_toTopOf="@+id/stage_raised_hands_item_role"
        app:layout_constraintEnd_toStartOf="@+id/stage_raised_hands_item_invite_button"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toEndOf="@+id/stage_raised_hands_item_user_avatar"
        app:layout_constraintTop_toTopOf="@+id/stage_raised_hands_item_user_avatar"
        style="@style/UiKit.Stage.ListItem.Title"/>
    <TextView
        android:id="@+id/stage_raised_hands_item_role"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginHorizontal="16dp"
        app:layout_constrainedWidth="true"
        app:layout_constraintBottom_toBottomOf="@+id/stage_raised_hands_item_user_avatar"
        app:layout_constraintEnd_toStartOf="@+id/stage_raised_hands_item_invite_button"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toEndOf="@+id/stage_raised_hands_item_user_avatar"
        app:layout_constraintTop_toBottomOf="@+id/stage_raised_hands_item_user_name"
        style="@style/UiKit.Stage.ListItem.Subtitle"/>
    <ImageView
        android:id="@+id/stage_raised_hands_item_invite_button"
        android:src="@drawable/ic_check_white_24dp"
        android:contentDescription="@string/stage_speak_invite_send"
        android:layout_marginEnd="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/stage_raised_hands_item_dismiss_button"
        app:layout_constraintTop_toTopOf="parent"
        style="@style/UiKit.Stage.ClickableButton"/>
    <ImageView
        android:id="@+id/stage_raised_hands_item_dismiss_button"
        android:src="@drawable/ic_close_24dp"
        android:contentDescription="@string/dismiss"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        style="@style/UiKit.Stage.ClickableButton"/>
</androidx.constraintlayout.widget.ConstraintLayout>
