<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:cardCornerRadius="4dp"
    app:cardElevation="0dp">
    <LinearLayout
        android:background="?attr/colorBackgroundSecondary"
        android:paddingLeft="8dp"
        android:paddingTop="4dp"
        android:paddingRight="8dp"
        android:paddingBottom="4dp"
        android:paddingHorizontal="8dp"
        android:paddingVertical="4dp"
        style="@style/UiKit.ViewGroup.LinearLayout.Horizontal">
        <ImageView
            android:layout_gravity="center_vertical"
            android:id="@+id/member_verification_verify_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:importantForAccessibility="no"
            android:layout_marginEnd="8dp"/>
        <TextView
            android:textSize="@dimen/uikit_textsize_medium"
            android:textColor="?attr/colorHeaderPrimary"
            android:gravity="center_vertical"
            android:id="@+id/member_verification_verify_text"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:drawablePadding="8dp"
            android:layout_weight="1"
            style="@style/UiKit.TextView.Large"/>
        <com.google.android.material.button.MaterialButton
            android:id="@+id/member_verification_verify_button"
            android:padding="0dp"
            android:layout_width="wrap_content"
            android:text="@string/verify"
            style="@style/UiKit.Material.Button"/>
        <TextView
            android:textAppearance="@style/UiKit.TextAppearance"
            android:textSize="@dimen/uikit_textsize_medium"
            android:textColor="@color/status_green_600"
            android:gravity="center_vertical"
            android:id="@+id/member_verification_verified_check"
            android:visibility="gone"
            android:layout_margin="8dp"
            android:text="@string/guild_verified"
            android:drawablePadding="8dp"
            app:drawableLeftCompat="@drawable/ic_checkmark_green_16dp"
            style="@style/UiKit.TextView"/>
    </LinearLayout>
</merge>
