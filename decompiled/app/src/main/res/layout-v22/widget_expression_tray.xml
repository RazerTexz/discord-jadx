<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/expression_tray_container"
    android:background="?attr/colorBackgroundSecondary"
    style="@style/UiKit.ViewGroup.Page">
    <com.discord.utilities.views.ContentResizingCoordinatorLayout
        android:id="@+id/expression_tray_landing_page"
        style="@style/UiKit.ViewGroup.Page">
        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/expression_tray_toolbar_layout"
            android:background="?attr/colorBackgroundSecondary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/AppTheme.AppBarLayout.Flat">
            <com.google.android.material.appbar.CollapsingToolbarLayout
                android:id="@+id/expression_tray_toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_scrollFlags="enterAlways|scroll">
                <LinearLayout style="@style/UiKit.ViewGroup.LinearLayout">
                    <com.discord.views.segmentedcontrol.SegmentedControlContainer
                        android:id="@+id/expression_tray_segmented_control"
                        android:background="@drawable/drawable_segmented_control_container_bg"
                        android:layout_marginLeft="12dp"
                        android:layout_marginTop="12dp"
                        android:layout_marginRight="12dp"
                        style="@style/UiKit.ViewGroup.LinearLayout.Horizontal">
                        <com.discord.views.segmentedcontrol.CardSegment
                            android:id="@+id/expression_tray_emoji_card"
                            android:contentDescription="@string/expression_picker_open_emoji_picker_a11y_label"
                            app:segment_text="@string/expression_picker_emoji"
                            style="@style/SegmentedControlTabCard"/>
                        <com.discord.views.segmentedcontrol.CardSegment
                            android:id="@+id/expression_tray_gif_card"
                            android:contentDescription="@string/expression_picker_open_gif_picker_a11y_label"
                            app:segment_text="@string/expression_picker_gif"
                            style="@style/SegmentedControlTabCard"/>
                        <com.discord.views.segmentedcontrol.CardSegment
                            android:id="@+id/expression_tray_sticker_card"
                            android:contentDescription="@string/expression_picker_open_sticker_picker_a11y_label"
                            app:segment_text="@string/expression_picker_sticker"
                            style="@style/SegmentedControlTabCard"/>
                    </com.discord.views.segmentedcontrol.SegmentedControlContainer>
                    <com.discord.utilities.view.rounded.RoundedRelativeLayout
                        android:id="@+id/expression_tray_search_bar"
                        android:background="?attr/colorBackgroundTertiary"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="12dp"
                        android:layout_marginTop="12dp"
                        android:layout_marginRight="12dp"
                        android:layout_marginBottom="8dp"
                        android:foreground="?attr/bg_pressed_highlight"
                        android:animateLayoutChanges="true"
                        android:layout_marginHorizontal="12dp"
                        app:bottomLeftRadius="4dp"
                        app:bottomRightRadius="4dp"
                        app:topLeftRadius="4dp"
                        app:topRightRadius="4dp">
                        <TextView
                            android:gravity="center_vertical"
                            android:id="@+id/expression_tray_search_button"
                            android:paddingTop="8dp"
                            android:paddingBottom="8dp"
                            android:layout_width="match_parent"
                            android:hint="@string/search_for_emoji"
                            style="@style/UiKit.SearchInput"/>
                        <ImageView
                            android:id="@+id/expression_tray_search_icon"
                            android:padding="8dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_search_white_24dp"
                            android:layout_centerVertical="true"
                            android:contentDescription="@string/search_emojis"
                            android:layout_alignParentEnd="true"
                            app:tint="?attr/colorTextMuted"/>
                    </com.discord.utilities.view.rounded.RoundedRelativeLayout>
                </LinearLayout>
            </com.google.android.material.appbar.CollapsingToolbarLayout>
        </com.google.android.material.appbar.AppBarLayout>
        <FrameLayout
            android:id="@+id/expression_tray_content_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/expression_tray_toolbar"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">
            <androidx.fragment.app.FragmentContainerView
                android:id="@+id/expression_tray_emoji_picker_content"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
            <androidx.fragment.app.FragmentContainerView
                android:id="@+id/expression_tray_gif_picker_content"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
            <androidx.fragment.app.FragmentContainerView
                android:id="@+id/expression_tray_sticker_picker_content"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </FrameLayout>
    </com.discord.utilities.views.ContentResizingCoordinatorLayout>
    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/expression_tray_detail_page"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</FrameLayout>
