<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:foreground="?attr/bg_pressed_highlight">
    <LinearLayout
        android:gravity="center_vertical"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:paddingVertical="8dp"
        style="@style/UiKit.ViewGroup.LinearLayout.Horizontal">
        <com.discord.views.user.SettingsMemberView
            android:id="@+id/settings_member_view"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:visibility="gone"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingStart="16dp"
            android:paddingVertical="12dp"
            app:smv_background_color="?attr/colorBackgroundSecondary"/>
        <ImageView
            android:id="@+id/item_icon"
            android:visibility="gone"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_members_24dp"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            app:tint="?attr/colorInteractiveNormal"/>
        <TextView
            android:textSize="@dimen/uikit_textsize_large"
            android:textColor="?attr/colorTextNormal"
            android:id="@+id/non_member_text"
            android:visibility="gone"
            android:layout_width="0dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:layout_weight="1"
            android:layout_marginVertical="8dp"
            style="@style/UiKit.TextView"/>
        <com.google.android.material.radiobutton.MaterialRadioButton
            android:id="@+id/audit_log_filter_radio_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"/>
    </LinearLayout>
</FrameLayout>
