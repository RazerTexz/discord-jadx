<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingHorizontal="16dp"
    style="@style/UiKit.ViewGroup.Page">
    <TextView
        android:textSize="@dimen/uikit_textsize_xxlarge"
        android:id="@+id/contact_sync_name_title"
        android:text="@string/contact_sync_enter_name_title"
        android:drawablePadding="16dp"
        android:textAlignment="center"
        app:layout_constraintBottom_toTopOf="@+id/contact_sync_name_subtitle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed"
        style="@style/UiKit.TextView.H1.Bold"/>
    <TextView
        android:textColor="?attr/colorHeaderSecondary"
        android:gravity="center_horizontal"
        android:id="@+id/contact_sync_name_subtitle"
        android:layout_marginTop="8dp"
        android:text="@string/contact_sync_enter_name_subtitle"
        android:lineSpacingMultiplier="1"
        app:layout_constraintBottom_toTopOf="@+id/contact_sync_name_input_wrap"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/contact_sync_name_title"
        style="@style/UiKit.TextView"/>
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/contact_sync_name_input_wrap"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="8dp"
        android:hint="@string/contact_sync_enter_name_input_header"
        app:endIconMode="clear_text"
        app:layout_constraintBottom_toTopOf="@+id/contact_sync_name_prefill_hint"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/contact_sync_name_subtitle"
        style="@style/UiKit.TextInputLayout">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/contact_sync_name_input"
            style="@style/UiKit.TextInputLayout.EditText.SingleLine"/>
    </com.google.android.material.textfield.TextInputLayout>
    <TextView
        android:id="@+id/contact_sync_name_prefill_hint"
        android:visibility="gone"
        android:text="@string/contact_sync_enter_name_prefill"
        android:lineSpacingMultiplier="1"
        app:layout_constraintBottom_toTopOf="@+id/contact_sync_name_next_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/contact_sync_name_input_wrap"
        style="@style/UiKit.TextView.Subtext"/>
    <com.discord.views.LoadingButton
        android:id="@+id/contact_sync_name_next_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/contact_sync_name_prefill_hint"
        app:lb_disabled_alpha="0.6"
        app:lb_progress_color="@color/white"
        app:lb_text="@string/next"/>
</androidx.constraintlayout.widget.ConstraintLayout>
