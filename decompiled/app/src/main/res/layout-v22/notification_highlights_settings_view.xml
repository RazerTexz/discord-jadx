<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" style="@style/UiKit.ViewGroup.LinearLayout">
    <com.discord.views.CheckedSetting
        android:id="@+id/highlights_switch"
        app:cs_text="@string/form_label_highlights"
        app:cs_view_type="switchview"
        style="@style/UiKit.CheckedSetting.Themed"/>
    <TextView
        android:paddingBottom="0dp"
        android:text="@string/form_label_highlights_note"
        style="@style/UiKit.Settings.Item.Addition"/>
    <TextView
        android:textColor="?attr/colorTextLink"
        android:id="@+id/highlights_learn_more"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:text="@string/highlights_learn_more"
        android:paddingVertical="8dp"
        style="@style/UiKit.Settings.Item.Addition"/>
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/highlights_warning"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="4dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="8dp"
        android:layout_marginHorizontal="16dp"
        app:cardBackgroundColor="?attr/colorInfoWarningBackground"
        app:cardCornerRadius="4dp"
        app:cardElevation="0dp"
        app:contentPadding="8dp"
        app:strokeColor="?attr/colorInfoWarningForeground"
        app:strokeWidth="1dp"
        style="@style/UiKit.ViewGroup.LinearLayout">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/UiKit.ViewGroup.LinearLayout.Horizontal">
            <com.facebook.drawee.view.SimpleDraweeView
                android:layout_gravity="center_vertical"
                android:background="@drawable/ic_warning_circle_24dp"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:backgroundTint="?attr/colorInfoWarningForeground"
                style="@style/UiKit.ImageView"/>
            <TextView
                android:textColor="?attr/colorInfoWarningText"
                android:layout_gravity="center"
                android:text="@string/highlights_server_too_large"
                android:layout_marginStart="8dp"
                style="@style/UiKit.TextView.Medium"/>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>
</LinearLayout>
