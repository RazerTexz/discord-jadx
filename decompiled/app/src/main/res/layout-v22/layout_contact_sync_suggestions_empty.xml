<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" style="@style/UiKit.ViewGroup.Page">
    <TextView
        android:textSize="@dimen/uikit_textsize_xxlarge"
        android:id="@+id/contact_sync_suggestions_empty_title"
        android:text="@string/contact_sync_suggestions_empty_title"
        android:drawablePadding="16dp"
        android:textAlignment="center"
        app:drawableTopCompat="@drawable/img_contact_sync_suggestions_empty_header"
        app:layout_constraintBottom_toTopOf="@+id/contact_sync_suggestions_empty_subtitle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed"
        style="@style/UiKit.TextView.H1.Bold"/>
    <TextView
        android:textColor="?attr/colorHeaderSecondary"
        android:id="@+id/contact_sync_suggestions_empty_subtitle"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:layout_marginTop="8dp"
        android:text="@string/contact_sync_suggestions_empty_subtitle"
        android:textAlignment="center"
        android:paddingHorizontal="16dp"
        app:layout_constraintBottom_toTopOf="@+id/contact_sync_suggestions_invite_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/contact_sync_suggestions_empty_title"
        app:layout_constraintVertical_chainStyle="packed"
        style="@style/UiKit.TextView"/>
    <com.google.android.material.button.MaterialButton
        android:id="@+id/contact_sync_suggestions_invite_button"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:text="@string/invite_friends"
        android:layout_marginHorizontal="16dp"
        app:layout_constraintBottom_toTopOf="@+id/contact_sync_suggestions_skip_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        style="@style/UiKit.Material.Button"/>
    <com.google.android.material.button.MaterialButton
        android:id="@+id/contact_sync_suggestions_skip_button"
        android:layout_marginBottom="8dp"
        android:text="@string/private_channel_add_members_modal_skip"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        style="@style/UiKit.Material.Button.Transparent.Fit"/>
</androidx.constraintlayout.widget.ConstraintLayout>
