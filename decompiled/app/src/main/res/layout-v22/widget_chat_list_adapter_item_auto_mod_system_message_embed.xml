<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="58dp"
    android:layout_marginEnd="12dp">
    <ImageView
        android:id="@+id/blocked_message_background"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/bg_automod_flagged_message"
        android:contentDescription="@string/guild_automod_android_background_content_description"
        android:layout_marginEnd="12dp"
        app:layout_constraintBottom_toBottomOf="@+id/footer_text"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/chat_list_adapter_item_text_avatar"
        android:layout_marginTop="12dp"
        android:importantForAccessibility="no"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        app:layout_constrainedWidth="true"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/username"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        style="@style/Avatar.Chat"/>
    <TextView
        android:textSize="@dimen/uikit_textsize_large"
        android:textColor="?attr/colorHeaderPrimary"
        android:id="@+id/username"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="@string/username"
        android:fontFamily="@font/whitney_medium"
        android:layout_marginStart="12dp"
        app:layout_constraintLeft_toRightOf="@+id/chat_list_adapter_item_text_avatar"
        app:layout_constraintTop_toTopOf="parent"/>
    <com.discord.utilities.view.text.SimpleDraweeSpanTextView
        android:textSize="@dimen/uikit_textsize_medium"
        android:textColor="?attr/colorHeaderPrimary"
        android:id="@+id/message_content"
        android:paddingTop="2dp"
        android:paddingBottom="2dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="@string/sample_channel_message"
        android:layout_weight="1"
        android:fontFamily="@font/whitney_medium"
        android:textAlignment="viewStart"
        android:paddingEnd="12dp"
        android:paddingVertical="2dp"
        app:flow_verticalAlign="center"
        app:layout_constraintLeft_toLeftOf="@+id/username"
        app:layout_constraintRight_toRightOf="@+id/blocked_message_background"
        app:layout_constraintTop_toBottomOf="@+id/username"/>
    <TextView
        android:textSize="@dimen/uikit_textsize_small"
        android:textColor="?attr/colorTextMuted"
        android:id="@+id/footer_text"
        android:paddingBottom="12dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:text="@string/sample_channel_name"
        android:paddingEnd="12sp"
        app:layout_constraintLeft_toLeftOf="@+id/username"
        app:layout_constraintRight_toRightOf="@+id/blocked_message_background"
        app:layout_constraintTop_toBottomOf="@+id/message_content"/>
    <ImageView
        android:id="@+id/blue_shield"
        android:paddingLeft="2dp"
        android:paddingTop="8dp"
        android:paddingRight="2dp"
        android:layout_width="16dp"
        android:layout_height="match_parent"
        android:src="@drawable/ic_blue_moderator_shield"
        android:contentDescription="@string/guild_automod_shield_content_description"
        android:layout_marginEnd="6dp"
        android:paddingHorizontal="2dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/blocked_message_background"/>
    <TextView
        android:textSize="@dimen/uikit_textsize_small"
        android:textColor="@color/link"
        android:id="@+id/actions_button"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="@string/guild_automod_moderator_actions_button"
        android:paddingStart="22dp"
        android:paddingVertical="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/blocked_message_background"/>
    <TextView
        android:textSize="@dimen/uikit_textsize_small"
        android:textColor="?attr/colorBackgroundModifierAccent"
        android:id="@+id/dot_separator"
        android:paddingLeft="4dp"
        android:paddingTop="8dp"
        android:paddingRight="4dp"
        android:paddingBottom="8dp"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="@string/guild_automod_separator"
        android:paddingHorizontal="4dp"
        android:paddingVertical="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/actions_button"
        app:layout_constraintTop_toBottomOf="@+id/blocked_message_background"/>
    <TextView
        android:textSize="@dimen/uikit_textsize_small"
        android:textColor="@color/link"
        android:id="@+id/report_button"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="@string/guild_automod_report_issues"
        android:paddingVertical="8dp"
        app:layout_constraintLeft_toRightOf="@+id/dot_separator"
        app:layout_constraintTop_toBottomOf="@+id/blocked_message_background"/>
</androidx.constraintlayout.widget.ConstraintLayout>
