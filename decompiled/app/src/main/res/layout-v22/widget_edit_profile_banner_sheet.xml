<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="?attr/colorBackgroundPrimary"
    android:paddingBottom="4dp"
    style="@style/UiKit.ViewGroup.LinearLayout">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/banner_color_item_container"
        android:background="?attr/bg_pressed_highlight"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:paddingVertical="12dp"
        style="@style/UiKit.ViewGroup.ConstraintLayout">
        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/banner_color_item_title"
            android:layout_height="wrap_content"
            android:text="@string/user_settings_banner_color_title"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintBottom_toTopOf="@+id/banner_color_item_description"
            app:layout_constraintEnd_toStartOf="@+id/banner_color_preview"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            style="@style/UiKit.ListItem.Title"/>
        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/banner_color_item_description"
            android:visibility="visible"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="@string/user_settings_banner_color_description"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/banner_color_preview"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/banner_color_item_title"
            style="@style/UiKit.ListItem.Description"/>
        <ImageView
            android:id="@+id/banner_color_preview"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/drawable_circle_black"
            android:layout_marginEnd="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="?attr/colorBackgroundPrimary"
            style="@style/UiKit.ImageView"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <LinearLayout
        android:id="@+id/banner_change_image_item_container"
        android:background="?attr/bg_pressed_highlight"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:paddingVertical="12dp"
        style="@style/UiKit.ViewGroup.LinearLayout">
        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/banner_change_image_item_title"
            android:layout_height="wrap_content"
            android:text="@string/user_settings_change_profile_banner"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            style="@style/UiKit.ListItem.Title"/>
        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/banner_change_image_item_description"
            android:visibility="visible"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="@string/user_settings_banner_specs"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            style="@style/UiKit.ListItem.Description"/>
        <com.google.android.material.button.MaterialButton
            android:id="@+id/premium_upsell_button"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/user_settings_customization_upsell"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            app:icon="@drawable/ic_nitro_badge_white"
            app:iconGravity="textStart"
            app:iconSize="@dimen/uikit_textsize_large"
            app:iconTint="@color/white"
            style="@style/UiKit.Material.Button.Green.Fit"/>
    </LinearLayout>
    <com.google.android.material.textview.MaterialTextView
        android:textColor="@color/status_red"
        android:id="@+id/banner_remove_image_item"
        android:background="?attr/bg_pressed_highlight"
        android:paddingLeft="16dp"
        android:paddingTop="12dp"
        android:paddingRight="16dp"
        android:paddingBottom="12dp"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/user_settings_remove_profile_banner"
        android:paddingHorizontal="16dp"
        android:paddingVertical="12dp"
        style="@style/UiKit.ListItem.Title"/>
</LinearLayout>
