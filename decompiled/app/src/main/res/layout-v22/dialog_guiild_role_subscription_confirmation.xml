<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="center_horizontal"
    android:background="@drawable/drawable_rect_rounded_bg_primary_dialog"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    style="@style/UiKit.ViewGroup.Page.LinearLayout">
    <TextView
        android:gravity="center_horizontal"
        android:id="@+id/guild_role_subscription_confirmation_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="40dp"
        android:layout_marginRight="32dp"
        android:text="@string/guild_role_subscription_publish_tier_dialog_title"
        android:layout_marginHorizontal="32dp"
        style="@style/UiKit.TextView.H1.Bold"/>
    <TextView
        android:textColor="?attr/colorHeaderSecondary"
        android:gravity="center_horizontal"
        android:id="@+id/guild_role_subscription_confirmation_subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="8dp"
        android:layout_marginRight="32dp"
        android:text="@string/guild_role_subscription_publish_tier_dialog_description"
        android:layout_marginHorizontal="32dp"
        style="@style/UiKit.TextView.Medium"/>
    <com.google.android.material.button.MaterialButton
        android:id="@+id/confirm"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="24dp"
        android:layout_marginRight="32dp"
        android:text="@string/guild_role_subscription_publish_tier_cta"
        android:layout_marginHorizontal="32dp"
        style="@style/UiKit.Material.Button"/>
    <com.google.android.material.button.MaterialButton
        android:id="@+id/cancel"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="8dp"
        android:layout_marginRight="32dp"
        android:layout_marginBottom="40dp"
        android:text="@string/cancel"
        android:backgroundTint="?attr/colorBackgroundAccentButton"
        android:layout_marginHorizontal="32dp"
        style="@style/UiKit.Material.Button"/>
</LinearLayout>
